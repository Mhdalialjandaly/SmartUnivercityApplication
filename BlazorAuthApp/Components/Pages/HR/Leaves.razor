@page "/hr/leaves"
@attribute [Authorize]
@inject ILeaveService LeaveService
@inject IUserService UserService
@inject ILeaveTypeService LeaveTypeService
@rendermode InteractiveServer
<PageTitle>الإجازات - الجامعة الذكية</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 fw-bold text-primary">الإجازات</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                            <li class="breadcrumb-item"><a href="/hr">الموارد البشرية</a></li>
                            <li class="breadcrumb-item active">الإجازات</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLeaveModal">
                        <i class="fas fa-plus me-2"></i>طلب إجازة جديد
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- إحصائيات سريعة -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-primary border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">إجمالي الإجازات</h5>
                            <h2 class="mb-0 fw-bold">@leaveSummary.TotalLeaves</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-calendar-alt fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">المعلقة</h5>
                            <h2 class="mb-0 fw-bold">@leaveSummary.PendingLeaves</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">المقبولة</h5>
                            <h2 class="mb-0 fw-bold">@leaveSummary.ApprovedLeaves</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">المرفوضة</h5>
                            <h2 class="mb-0 fw-bold">@leaveSummary.RejectedLeaves</h2>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-times-circle fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- قائمة الإجازات -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">قائمة الإجازات</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-md-end gap-2">
                                <div class="input-group" style="max-width: 300px;">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" class="form-control" placeholder="بحث عن موظف..." @bind="searchTerm" @oninput="SearchLeaves">
                                </div>
                                <select class="form-select" style="max-width: 150px;" @onchange="FilterByStatus">
                                    <option value="">جميع الحالات</option>
                                    <option value="معلق">معلق</option>
                                    <option value="مقبول">مقبول</option>
                                    <option value="مرفوض">مرفوض</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>الموظف</th>
                                    <th>نوع الإجازة</th>
                                    <th>من تاريخ</th>
                                    <th>إلى تاريخ</th>
                                    <th>عدد الأيام</th>
                                    <th>السبب</th>
                                    <th>الحالة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (leaves.Any())
                                {
                                    @for (int i = 0; i < leaves.Count; i++)
                                    {
                                        var leave = leaves[i];
                                        <tr>
                                            <td>@leave.Id</td>
                                            <td>@leave.EmployeeName</td>
                                            <td>@leave.LeaveTypeName</td>
                                            <td>@leave.StartDate.ToString("yyyy-MM-dd")</td>
                                            <td>@leave.EndDate.ToString("yyyy-MM-dd")</td>
                                            <td>@leave.TotalDays</td>
                                            <td>@leave.Reason</td>
                                            <td>
                                                <span class="badge @(leave.Status == "مقبول" ? "bg-success" :
                                                                    leave.Status == "معلق" ? "bg-warning" : "bg-danger")">
                                                    @leave.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="javascript:void(0)" @onclick="() => ViewLeaveDetails(leave)"><i class="fas fa-eye me-2"></i>عرض التفاصيل</a></li>
                                                        @if (leave.Status == "معلق")
                                                        {
                                                            <li><a class="dropdown-item text-success" href="javascript:void(0)" @onclick="() => ApproveLeave(leave.Id)"><i class="fas fa-check me-2"></i>موافقة</a></li>
                                                            <li><a class="dropdown-item text-danger" href="javascript:void(0)" @onclick="() => RejectLeave(leave.Id)"><i class="fas fa-times me-2"></i>رفض</a></li>
                                                        }
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item text-danger" href="javascript:void(0)" @onclick="() => DeleteLeave(leave.Id)"><i class="fas fa-trash me-2"></i>حذف</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center">لا توجد إجازات</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal طلب إجازة جديد -->
<div class="modal fade" id="addLeaveModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">طلب إجازة جديد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">الموظف *</label>
                            <select class="form-select" @bind="newLeave.EmployeeId" required>
                                <option value="">اختر الموظف</option>
                                @foreach (var employee in employees)
                                {
                                    <option value="@employee.Id">@($"{employee.FirstName} {employee.LastName}")</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">نوع الإجازة *</label>
                            <select class="form-select" @bind="newLeave.LeaveTypeId" required>
                                <option value="">اختر نوع الإجازة</option>
                                @foreach (var leaveType in leaveTypes)
                                {
                                    <option value="@leaveType.Id">@leaveType.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">من تاريخ *</label>
                            <input type="date" class="form-control" @bind="newLeave.StartDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">إلى تاريخ *</label>
                            <input type="date" class="form-control" @bind="newLeave.EndDate" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">عدد الأيام</label>
                            <input type="number" class="form-control" value="@totalDays" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">الرصيد المتبقي</label>
                            <input type="number" class="form-control" value="@leaveBalance" readonly>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">السبب *</label>
                        <textarea class="form-control" rows="3" placeholder="أدخل سبب الإجازة" @bind="newLeave.Reason" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الملاحظات</label>
                        <textarea class="form-control" rows="2" placeholder="أدخل الملاحظات" @bind="newLeave.Notes"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-primary" @onclick="CreateLeave">طلب الإجازة</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal موافقة/رفض الإجازة -->
<div class="modal fade" id="approveRejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@approveRejectAction الإجازة</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">@((approveRejectAction == "موافقة") ? "ملاحظات الموافقة" : "سبب الرفض")</label>
                    <textarea class="form-control" rows="3" placeholder="@((approveRejectAction == "موافقة") ? "أدخل ملاحظات الموافقة" : "أدخل سبب الرفض")" @bind="approvalNotes"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-@(approveRejectAction == "موافقة" ? "success" : "danger")" @onclick="ProcessLeaveAction">
                    @approveRejectAction
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<LeaveDto> leaves = new();
    private List<UserDto> employees = new();
    private List<LeaveTypeDto> leaveTypes = new();
    private LeaveDto newLeave = new();
    private LeaveSummaryDto leaveSummary = new();
    private string searchTerm = "";
    private string selectedStatus = "";
    private int leaveToProcess = 0;
    private string approveRejectAction = "";
    private string approvalNotes = "";

    private int totalDays => (newLeave.EndDate - newLeave.StartDate).Days + 1;
    private int leaveBalance = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
        await LoadLeaveTypes();
        await LoadLeaveSummary();
        await LoadLeaves();
    }

    private async Task LoadEmployees()
    {
        try
        {
            employees = await UserService.GetAllUsersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading employees: {ex.Message}");
        }
    }

    private async Task LoadLeaveTypes()
    {
        try
        {
            leaveTypes = await LeaveTypeService.GetAllLeaveTypesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading leave types: {ex.Message}");
        }
    }

    private async Task LoadLeaves()
    {
        try
        {
            leaves = await LeaveService.GetAllLeavesAsync();

            // تطبيق الفلاتر
            if (!string.IsNullOrEmpty(searchTerm))
            {
                leaves = leaves.Where(l =>
                    l.EmployeeName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)).ToList();
            }

            if (!string.IsNullOrEmpty(selectedStatus))
            {
                leaves = leaves.Where(l => l.Status == selectedStatus).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading leaves: {ex.Message}");
        }
    }

    private async Task LoadLeaveSummary()
    {
        try
        {
            leaveSummary = await LeaveService.GetLeaveSummaryAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading leave summary: {ex.Message}");
        }
    }

    private async Task SearchLeaves(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        await LoadLeaves();
    }

    private async Task FilterByStatus(ChangeEventArgs e)
    {
        selectedStatus = e.Value?.ToString() ?? "";
        await LoadLeaves();
    }

    private async Task CreateLeave()
    {
        try
        {
            newLeave.TotalDays = totalDays;
            newLeave.Status = "معلق";

            var createdLeave = await LeaveService.CreateLeaveAsync(newLeave);

            // إعادة تعيين النموذج
            newLeave = new LeaveDto();

            // تحديث القائمة والإحصائيات
            await LoadLeaveSummary();
            await LoadLeaves();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating leave: {ex.Message}");
        }
    }

    private void ViewLeaveDetails(LeaveDto leave)
    {
        // عرض تفاصيل الإجازة
    }

    private void ApproveLeave(int leaveId)
    {
        leaveToProcess = leaveId;
        approveRejectAction = "موافقة";
        approvalNotes = "";
        // فتح الـ Modal
    }

    private void RejectLeave(int leaveId)
    {
        leaveToProcess = leaveId;
        approveRejectAction = "رفض";
        approvalNotes = "";
        // فتح الـ Modal
    }

    private async Task ProcessLeaveAction()
    {
        try
        {
            if (approveRejectAction == "موافقة")
            {
                await LeaveService.ApproveLeaveAsync(leaveToProcess, "المستخدم الحالي");
            }
            else
            {
                await LeaveService.RejectLeaveAsync(leaveToProcess, approvalNotes);
            }

            // تحديث القائمة والإحصائيات
            await LoadLeaveSummary();
            await LoadLeaves();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error processing leave action: {ex.Message}");
        }
    }

    private async Task DeleteLeave(int leaveId)
    {
        try
        {
            await LeaveService.DeleteLeaveAsync(leaveId);

            // تحديث القائمة والإحصائيات
            await LoadLeaveSummary();
            await LoadLeaves();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting leave: {ex.Message}");
        }
    }
}