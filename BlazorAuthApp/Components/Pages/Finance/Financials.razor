@page "/financial-management"
@attribute [Authorize]
@inject IStudentPaymentService StudentPaymentService
@inject IEmployeeSalaryService EmployeeSalaryService
@inject ICourseService CourseService
@inject IDepartmentService DepartmentService
@inject IFinanceService FinanceService
@rendermode InteractiveServer
<PageTitle>الشؤون المالية - الجامعة الذكية</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 fw-bold text-primary">الشؤون المالية</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                            <li class="breadcrumb-item active">الشؤون المالية</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-flex gap-2">
                    <a href="/finance/student-payments" class="btn btn-outline-primary">
                        <i class="fas fa-receipt me-2"></i>مدفوعات الطلاب
                    </a>
                    <a href="/finance/employee-salaries" class="btn btn-outline-info">
                        <i class="fas fa-file-invoice-dollar me-2"></i>رواتب الموظفين
                    </a>
                    <a href="/finance/reports" class="btn btn-outline-success">
                        <i class="fas fa-chart-bar me-2"></i>التقارير المالية
                    </a>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateReportModal">
                        <i class="fas fa-file-pdf me-2"></i>تقرير مالي
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- إحصائيات مالية سريعة -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-primary border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">إجمالي الإيرادات</h5>
                            <h2 class="mb-0 fw-bold">@totalRevenue.ToString("C")</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-money-bill-wave fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">إجمالي المصروفات</h5>
                            <h2 class="mb-0 fw-bold">@totalExpenses.ToString("C")</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-money-check-alt fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">الرصيد الحالي</h5>
                            <h2 class="mb-0 fw-bold">@currentBalance.ToString("C")</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-balance-scale fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info border-start border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="text-muted">إجمالي المعاملات</h5>
                            <h2 class="mb-0 fw-bold">@totalTransactions</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-exchange-alt fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- علامات التبويب -->
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs mb-4" id="financeTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">نظرة عامة</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments" type="button" role="tab" @onclick="LoadPaymentsSummary">مدفوعات الطلاب</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="salaries-tab" data-bs-toggle="tab" data-bs-target="#salaries" type="button" role="tab" @onclick="LoadSalariesSummary">رواتب الموظفين</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="courses-tab" data-bs-toggle="tab" data-bs-target="#courses" type="button" role="tab" @onclick="LoadCoursesRevenue">إيرادات المواد</button>
                </li>
            </ul>

            <div class="tab-content" id="financeTabsContent">
                <!-- نظرة عامة -->
                <div class="tab-pane fade show active" id="overview" role="tabpanel">
                    <div class="row g-4">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header bg-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">الإيرادات والمصروفات الشهرية</h5>
                                        <select class="form-select" style="max-width: 150px;" @bind="selectedYear">
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                            <option value="2026">2026</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <canvas id="revenueChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-header bg-white">
                                    <h5 class="mb-0">أهم المصروفات</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>البند</th>
                                                    <th>المبلغ</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>رواتب الموظفين</td>
                                                    <td><span class="text-danger">@employeeSalaries.ToString("C")</span></td>
                                                </tr>
                                                <tr>
                                                    <td>صيانة المباني</td>
                                                    <td><span class="text-danger">@buildingMaintenance.ToString("C")</span></td>
                                                </tr>
                                                <tr>
                                                    <td>معدات تعليمية</td>
                                                    <td><span class="text-danger">@educationalEquipment.ToString("C")</span></td>
                                                </tr>
                                                <tr>
                                                    <td>خدمات الإنترنت</td>
                                                    <td><span class="text-danger">@internetServices.ToString("C")</span></td>
                                                </tr>
                                                <tr>
                                                    <td>مرافق</td>
                                                    <td><span class="text-danger">@utilities.ToString("C")</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- مدفوعات الطلاب -->
                <div class="tab-pane fade" id="payments" role="tabpanel">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <div class="card border-primary border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">إجمالي المدفوعات</h5>
                                            <h2 class="mb-0 fw-bold">@paymentSummary.TotalPayments</h2>
                                        </div>
                                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-receipt fa-2x text-primary"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-success border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">إجمالي المبالغ</h5>
                                            <h2 class="mb-0 fw-bold">@paymentSummary.TotalAmount.ToString("C")</h2>
                                        </div>
                                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">المدفوعات المعلقة</h5>
                                            <h2 class="mb-0 fw-bold">@paymentSummary.PendingPayments</h2>
                                        </div>
                                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-clock fa-2x text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-info border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">المبالغ المعلقة</h5>
                                            <h2 class="mb-0 fw-bold">@paymentSummary.PendingAmount.ToString("C")</h2>
                                        </div>
                                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-exclamation-circle fa-2x text-info"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">أحدث المدفوعات</h5>
                                <a href="/finance/student-payments" class="btn btn-sm btn-outline-primary">عرض الكل</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>#</th>
                                            <th>الطالب</th>
                                            <th>المادة</th>
                                            <th>المبلغ</th>
                                            <th>تاريخ الدفع</th>
                                            <th>طريقة الدفع</th>
                                            <th>الحالة</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (recentPayments.Any())
                                        {
                                            @for (int i = 0; i < Math.Min(5, recentPayments.Count); i++)
                                            {
                                                var payment = recentPayments[i];
                                                <tr>
                                                    <td>@payment.Id</td>
                                                    <td>@payment.StudentName</td>
                                                    <td>@payment.CourseName</td>
                                                    <td>@payment.Amount.ToString("C")</td>
                                                    <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                                                    <td>@payment.PaymentMethod</td>
                                                    <td>
                                                        <span class="badge @(payment.Status == "مدفوع" ? "bg-success" :
                                                                            payment.Status == "معلق" ? "bg-warning" : "bg-danger")">
                                                            @payment.Status
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="7" class="text-center">لا توجد مدفوعات</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- رواتب الموظفين -->
                <div class="tab-pane fade" id="salaries" role="tabpanel">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <div class="card border-primary border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">إجمالي الرواتب</h5>
                                            <h2 class="mb-0 fw-bold">@salarySummary.TotalSalaries</h2>
                                        </div>
                                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-file-invoice-dollar fa-2x text-primary"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-success border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">إجمالي المبالغ</h5>
                                            <h2 class="mb-0 fw-bold">@salarySummary.TotalAmount.ToString("C")</h2>
                                        </div>
                                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-money-check-alt fa-2x text-success"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">الرواتب المعلقة</h5>
                                            <h2 class="mb-0 fw-bold">@salarySummary.PendingSalaries</h2>
                                        </div>
                                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-clock fa-2x text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-info border-start border-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="text-muted">المبالغ المعلقة</h5>
                                            <h2 class="mb-0 fw-bold">@salarySummary.PendingAmount.ToString("C")</h2>
                                        </div>
                                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-exclamation-circle fa-2x text-info"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">أحدث الرواتب</h5>
                                <a href="/finance/employee-salaries" class="btn btn-sm btn-outline-primary">عرض الكل</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>#</th>
                                            <th>الموظف</th>
                                            <th>الوظيفة</th>
                                            <th>الراتب الأساسي</th>
                                            <th>البدلات</th>
                                            <th>الخصومات</th>
                                            <th>الصافي</th>
                                            <th>الحالة</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (recentSalaries.Any())
                                        {
                                            @for (int i = 0; i < Math.Min(5, recentSalaries.Count); i++)
                                            {
                                                var salary = recentSalaries[i];
                                                <tr>
                                                    <td>@salary.Id</td>
                                                    <td>@salary.EmployeeName</td>
                                                    <td>@salary.EmployeePosition</td>
                                                    <td>@salary.BaseSalary.ToString("C")</td>
                                                    <td>@salary.Allowances.ToString("C")</td>
                                                    <td><span class="text-danger">@salary.Deductions.ToString("C")</span></td>
                                                    <td><strong>@salary.NetSalary.ToString("C")</strong></td>
                                                    <td>
                                                        <span class="badge @(salary.Status == "مدفوع" ? "bg-success" :
                                                                            salary.Status == "معلق" ? "bg-warning" : "bg-danger")">
                                                            @salary.Status
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center">لا توجد رواتب</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- إيرادات المواد -->
                <div class="tab-pane fade" id="courses" role="tabpanel">
                    <div class="card">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">إيرادات المواد الدراسية</h5>
                                <select class="form-select" style="max-width: 150px;" @bind="selectedSemester">
                                    <option value="1">الفصل الأول</option>
                                    <option value="2">الفصل الثاني</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>#</th>
                                            <th>رمز المادة</th>
                                            <th>اسم المادة</th>
                                            <th>القسم</th>
                                            <th>عدد الطلاب</th>
                                            <th>الكلفة</th>
                                            <th>إجمالي الإيرادات</th>
                                            <th>النسبة</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (courseRevenues.Any())
                                        {
                                            @for (int i = 0; i < courseRevenues.Count; i++)
                                            {
                                                var course = courseRevenues[i];
                                                <tr>
                                                    <td>@(i + 1)</td>
                                                    <td><strong>@course.Code</strong></td>
                                                    <td>@course.Name</td>
                                                    <td>@course.DepartmentName</td>
                                                    <td class="text-center">@course.CurrentStudents</td>
                                                    <td>@course.Fee.ToString("C")</td>
                                                    <td><strong>@(course.CurrentStudents * course.Fee).ToString("C")</strong></td>
                                                    <td>
                                                        <div class="progress" style="height: 10px;">
                                                            <div class="progress-bar" role="progressbar"
                                                                 style="width: @((course.CurrentStudents * course.Fee / totalCourseRevenue) * 100)%"></div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center">لا توجد مواد</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <th colspan="6">الإجمالي</th>
                                            <th>@totalCourseRevenue.ToString("C")</th>
                                            <th>100%</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal تقرير مالي -->
<div class="modal fade" id="generateReportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">توليد تقرير مالي</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">نوع التقرير *</label>
                        <select class="form-select" @bind="reportType" required>
                            <option value="">اختر نوع التقرير</option>
                            <option value="monthly">تقرير شهري</option>
                            <option value="quarterly">تقرير ربع سنوي</option>
                            <option value="annual">تقرير سنوي</option>
                            <option value="custom">فترة مخصصة</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">من تاريخ *</label>
                            <input type="date" class="form-control" @bind="reportStartDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">إلى تاريخ *</label>
                            <input type="date" class="form-control" @bind="reportEndDate" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">القسم</label>
                        <select class="form-select" @bind="reportDepartmentId">
                            <option value="">جميع الأقسام</option>
                            @foreach (var dept in departments)
                            {
                                <option value="@dept.Id">@dept.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">نوع المعاملات</label>
                        <select class="form-select" @bind="transactionType">
                            <option value="all">جميع المعاملات</option>
                            <option value="income">الإيرادات فقط</option>
                            <option value="expense">المصروفات فقط</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-primary" @onclick="GenerateReport">توليد التقرير</button>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb {
        background: transparent;
        padding: 0;
        margin: 0;
    }

    .nav-tabs .nav-link {
        border: none;
        border-bottom: 3px solid transparent;
        font-weight: 500;
    }

        .nav-tabs .nav-link.active {
            border-bottom: 3px solid #0d6efd;
            color: #0d6efd;
        }

    .table th {
        font-weight: 600;
    }

    .badge {
        font-size: 0.75em;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .border-start {
        border-left: 4px solid !important;
    }

    .progress {
        height: 10px;
    }
</style>

@code {
    // الإحصائيات العامة
    private decimal totalRevenue = 0;
    private decimal totalExpenses = 0;
    private decimal currentBalance = 0;
    private int totalTransactions = 0;

    // المصروفات
    private decimal employeeSalaries = 0;
    private decimal buildingMaintenance = 0;
    private decimal educationalEquipment = 0;
    private decimal internetServices = 0;
    private decimal utilities = 0;

    // ملخصات
    private StudentPaymentSummaryDto paymentSummary = new();
    private SalarySummaryDto salarySummary = new();

    // البيانات
    private List<StudentPaymentDto> recentPayments = new();
    private List<EmployeeSalaryDto> recentSalaries = new();
    private List<CourseDto> courseRevenues = new();
    private List<DepartmentDto> departments = new();

    // الفلاتر
    private string selectedYear = DateTime.Now.Year.ToString();
    private int selectedSemester = 1;
    private string reportType = "";
    private DateTime reportStartDate = DateTime.Now.AddMonths(-1);
    private DateTime reportEndDate = DateTime.Now;
    private int reportDepartmentId = 0;
    private string transactionType = "all";

    // الإحصائيات
    private decimal totalCourseRevenue = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadDepartments();
        await LoadFinancialOverview();
        await LoadPaymentsSummary();
        await LoadSalariesSummary();
        await LoadCoursesRevenue();
    }

    private async Task LoadDepartments()
    {
        try
        {
            departments = await DepartmentService.GetAllDepartmentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading departments: {ex.Message}");
        }
    }

    private async Task LoadFinancialOverview()
    {
        try
        {
            // تحميل الإحصائيات المالية العامة
            totalRevenue = await FinanceService.GetTotalRevenueAsync();
            totalExpenses = await FinanceService.GetTotalExpensesAsync();
            currentBalance = totalRevenue - totalExpenses;
            totalTransactions = await FinanceService.GetTotalTransactionsAsync();

            // تحميل المصروفات
            var esvalue = await FinanceService.GetEmployeeSalariesAsync();
            employeeSalaries = esvalue.Sum(e => e.Amount);
            var bmvalue  = await FinanceService.GetBuildingMaintenanceAsync();
            buildingMaintenance = bmvalue.Sum(e => e.Amount);
            var eevalue = await FinanceService.GetEducationalEquipmentAsync();
            educationalEquipment = eevalue.Sum(e => e.Amount);
            var isvalue = await FinanceService.GetInternetServicesAsync();
            internetServices = isvalue.Sum(e => e.Amount);
            var uvalue = await FinanceService.GetUtilitiesAsync();
            utilities = uvalue.Sum(e => e.Amount);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading financial overview: {ex.Message}");
        }
    }

    private async Task LoadPaymentsSummary()
    {
        try
        {
            paymentSummary = await StudentPaymentService.GetPaymentSummaryAsync();
            recentPayments = await FinanceService.GetRecentPaymentsAsync(10); 
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading payments summary: {ex.Message}");
        }
    }

    private async Task LoadSalariesSummary()
    {
        try
        {
            salarySummary = await EmployeeSalaryService.GetSalarySummaryAsync();
            recentSalaries = await EmployeeSalaryService.GetRecentSalariesAsync(10);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading salaries summary: {ex.Message}");
        }
    }

    private async Task LoadCoursesRevenue()
    {
        try
        {
            courseRevenues = await CourseService.GetCoursesBySemesterAsync(selectedSemester, int.Parse(selectedYear));
            totalCourseRevenue = courseRevenues.Sum(c => c.CurrentStudents * c.Fee);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading courses revenue: {ex.Message}");
        }
    }

    private async Task GenerateReport()
    {
        try
        {
            var report = await FinanceService.GenerateFinancialReportAsync(
                reportType,
                reportStartDate,
                reportEndDate,
                reportDepartmentId,
                transactionType);

            // تنزيل التقرير
            // await JS.InvokeVoidAsync("downloadFile", $"Financial_Report_{DateTime.Now:yyyyMMdd}.pdf", "application/pdf", report);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating report: {ex.Message}");
        }
    }

    private async Task FilterBySemester(ChangeEventArgs e)
    {
        selectedSemester = int.Parse(e.Value?.ToString() ?? "1");
        await LoadCoursesRevenue();
    }

    private async Task FilterByYear(ChangeEventArgs e)
    {
        selectedYear = e.Value?.ToString() ?? DateTime.Now.Year.ToString();
        await LoadCoursesRevenue();
    }

    private async Task FilterByDepartment(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        reportDepartmentId = string.IsNullOrEmpty(value) ? 0 : int.Parse(value);
    }

    
}
