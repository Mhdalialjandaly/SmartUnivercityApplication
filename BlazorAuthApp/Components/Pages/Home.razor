@page "/"
@attribute [Authorize]

<PageTitle>الرئيسية - الجامعة الذكية</PageTitle>

<div class="container-fluid">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3">مرحباً بك في الجامعة الذكية</h1>
        <p class="text-muted lead">اكتشف التخصصات المتقدمة في عالم التقنية والذكاء الاصطناعي</p>
    </div>

    <!-- إحصائيات سريعة -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-primary border-2">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                    <h3 class="h4 fw-bold">2,540</h3>
                    <p class="text-muted mb-0">طالب مسجل</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success border-2">
                <div class="card-body text-center">
                    <i class="fas fa-chalkboard-teacher fa-2x text-success mb-2"></i>
                    <h3 class="h4 fw-bold">180</h3>
                    <p class="text-muted mb-0">عضو هيئة تدريس</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info border-2">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-2x text-info mb-2"></i>
                    <h3 class="h4 fw-bold">85</h3>
                    <p class="text-muted mb-0">تخصص دراسي</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning border-2">
                <div class="card-body text-center">
                    <i class="fas fa-graduation-cap fa-2x text-warning mb-2"></i>
                    <h3 class="h4 fw-bold">15</h3>
                    <p class="text-muted mb-0">قسم أكاديمي</p>
                </div>
            </div>
        </div>
    </div>

    <!-- كروت الأقسام -->
    <div class="text-center mb-4">
        <h2 class="display-6 fw-bold text-primary">أقسام الجامعة</h2>
        <p class="text-muted">اختر تخصصك من بين التخصصات المتقدمة</p>
    </div>

    <div class="row g-4">
        <!-- قسم 1 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-laptop-code fa-2x text-primary"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">هندسة البرمجيات</h3>
                    <p class="text-muted">تعلم بناء أنظمة ذكية وتطبيقات متطورة باستخدام أحدث التقنيات البرمجية</p>
                    <a href="/departments/software" class="btn btn-outline-primary btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 2 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-success bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-robot fa-2x text-success"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">الذكاء الاصطناعي</h3>
                    <p class="text-muted">استكشاف عالم التعلم الآلي ومعالجة اللغات الطبيعية ورؤية الحاسوب</p>
                    <a href="/departments/ai" class="btn btn-outline-success btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 3 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-info bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-database fa-2x text-info"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">علم البيانات</h3>
                    <p class="text-muted">تحليل البيانات الضخمة واستخراج المعرفة لاتخاذ القرارات الذكية</p>
                    <a href="/departments/data-science" class="btn btn-outline-info btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 4 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-danger bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-shield-alt fa-2x text-danger"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">الأمن السيبراني</h3>
                    <p class="text-muted">حماية الأنظمة والشبكات من الهجمات الإلكترونية والتهديدات الرقمية</p>
                    <a href="/departments/cybersecurity" class="btn btn-outline-danger btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 5 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-warning bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-gamepad fa-2x text-warning"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">تطوير الألعاب</h3>
                    <p class="text-muted">تصميم وتطوير ألعاب تفاعلية باستخدام محركات الألعاب الحديثة</p>
                    <a href="/departments/game-development" class="btn btn-outline-warning btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 6 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-secondary bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-mobile-alt fa-2x text-secondary"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">تطبيقات الجوال</h3>
                    <p class="text-muted">بناء تطبيقات ذكية لأنظمة iOS و Android باستخدام أحدث الأطر</p>
                    <a href="/departments/mobile-apps" class="btn btn-outline-secondary btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 7 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-cloud fa-2x text-primary"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">الحوسبة السحابية</h3>
                    <p class="text-muted">استخدام خدمات الحوسبة السحابية لتطوير حلول قابلة للتوسع</p>
                    <a href="/departments/cloud-computing" class="btn btn-outline-primary btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 8 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-success bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-vr-cardboard fa-2x text-success"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">الواقع الافتراضي</h3>
                    <p class="text-muted">تصميم تجارب غامرة باستخدام تقنيات VR و AR المتطورة</p>
                    <a href="/departments/vr-ar" class="btn btn-outline-success btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>

        <!-- قسم 9 -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center py-4">
                    <div class="icon-wrapper bg-info bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-chart-line fa-2x text-info"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">التسويق الرقمي</h3>
                    <p class="text-muted">استراتيجيات التسويق الذكي وتحليل البيانات لتحسين الحملات</p>
                    <a href="/departments/digital-marketing" class="btn btn-outline-info btn-sm">معرفة المزيد</a>
                </div>
            </div>
        </div>
    </div>

    <!-- أحدث الإشعارات -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-bell me-2"></i>أحدث الإشعارات</h4>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">بدء التسجيل للفصل الدراسي الجديد</h6>
                                <small class="text-muted">قبل 2 ساعة</small>
                            </div>
                            <p class="mb-1">يمكن للطلاب الآن التسجيل في المواد الدراسية للفصل القادم.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">ورشة عمل في الذكاء الاصطناعي</h6>
                                <small class="text-muted">أمس</small>
                            </div>
                            <p class="mb-1">ندوة مجانية حول تطبيقات الذكاء الاصطناعي في الطب.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">إجازة رسمية</h6>
                                <small class="text-muted">3 أيام مضت</small>
                            </div>
                            <p class="mb-1">الجامعة ستكون مغلقة يوم الجمعة القادم بمناسبة العيد.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease;
        cursor: pointer;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .icon-wrapper {
        transition: all 0.3s ease;
    }

    .card:hover .icon-wrapper {
        transform: scale(1.1);
    }
</style>

