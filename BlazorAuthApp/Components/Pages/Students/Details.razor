@page "/students/{studentId}"
@attribute [Authorize]
@inject IStudentServices _studentService
@inject IDepartmentService _departmentService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>تفاصيل الطالب - الجامعة الذكية</PageTitle>

@if (studentDetails == null)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">جاري التحميل...</span>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0 fw-bold text-primary">تفاصيل الطالب</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                                <li class="breadcrumb-item"><a href="/students">شؤون الطلاب</a></li>
                                <li class="breadcrumb-item active">@($"{studentDetails.FirstName} {studentDetails.LastName}")</li>
                            </ol>
                        </nav>
                    </div>
                    <div>
                        <a href="/students/@studentDetails.StudentId/edit" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>تعديل
                        </a>
                        <button class="btn btn-danger" @onclick="ConfirmAndDelete">
                            <i class="fas fa-trash me-2"></i>حذف
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- معلومات أساسية -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>المعلومات الأساسية</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">رقم الطالب:</dt>
                            <dd class="col-sm-8">@studentDetails.StudentId</dd>

                            <dt class="col-sm-4">الاسم الكامل:</dt>
                            <dd class="col-sm-8">@($"{studentDetails.FirstName} {studentDetails.LastName}")</dd>

                            <dt class="col-sm-4">القسم:</dt>
                            <dd class="col-sm-8">@GetDepartmentName(studentDetails.DepartmentId)</dd>

                            <dt class="col-sm-4">السنة الدراسية:</dt>
                            <dd class="col-sm-8">@GetAcademicYear(studentDetails.RegistrationDate)</dd>

                            <dt class="col-sm-4">تاريخ الولادة:</dt>
                            <dd class="col-sm-8">@(studentDetails.BirthOfDate.ToString("yyyy-MM-dd") ?? "غير محدد")</dd>

                            <dt class="col-sm-4">الجنس:</dt>
                            <dd class="col-sm-8">@(studentDetails.Sexual == true ? "ذكر" : "أنثى")</dd>

                            <dt class="col-sm-4">الديانة:</dt>
                            <dd class="col-sm-8">@studentDetails.Religion</dd>

                            <dt class="col-sm-4">المعدل التراكمي (GPA):</dt>
                            <dd class="col-sm-8">
                                @if (studentDetails.GPA != 0)
                                {
                                    <span class="badge @(studentDetails.GPA >= 3.5 ? "bg-success" : studentDetails.GPA >= 2.5 ? "bg-warning" : "bg-danger")">@studentDetails.GPA.ToString("F2")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">-</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- معلومات الاتصال -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-address-book me-2"></i>معلومات الاتصال</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">الهاتف الأول:</dt>
                            <dd class="col-sm-8">@studentDetails.Phone</dd>

                            <dt class="col-sm-4">الهاتف الثاني:</dt>
                            <dd class="col-sm-8">@studentDetails.SecoundPhone</dd>

                            <dt class="col-sm-4">البريد الإلكتروني:</dt>
                            <dd class="col-sm-8">@studentDetails.Email</dd>

                            <dt class="col-sm-4">محل السكن:</dt>
                            <dd class="col-sm-8">@studentDetails.HomeAddress</dd>

                            <dt class="col-sm-4">رقم الدار:</dt>
                            <dd class="col-sm-8">@studentDetails.HomeNumber</dd>

                            <dt class="col-sm-4">العنوان الدائم:</dt>
                            <dd class="col-sm-8">@studentDetails.FullAddress</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- معلومات وظيفية -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>المعلومات الوظيفية</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">هل هو موظف؟</dt>
                            <dd class="col-sm-8">@(studentDetails.TrueIsEmployee == true ? "نعم" : "لا")</dd>

                            <dt class="col-sm-4">مكان العمل:</dt>
                            <dd class="col-sm-8">@studentDetails.WorkAddress</dd>

                            <dt class="col-sm-4">قناة القبول:</dt>
                            <dd class="col-sm-8">@studentDetails.TunnelId</dd> <!-- You might want to resolve this to a name -->

                            <dt class="col-sm-4">قسم التسجيل:</dt>
                            <dd class="col-sm-8">@studentDetails.SubmissionDepartment</dd>

                            <dt class="col-sm-4">قناة التسجيل:</dt>
                            <dd class="col-sm-8">@studentDetails.TunnelDepartment</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- معلومات وطنية -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-passport me-2"></i>المعلومات الوطنية</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">رقم الهوية:</dt>
                            <dd class="col-sm-8">@studentDetails.CivilstatusIDNumberAndNationalCard</dd>

                            <dt class="col-sm-4">صادرة من:</dt>
                            <dd class="col-sm-8">@studentDetails.CivilstatusIDNumberAndNationalCardFrom</dd>

                            <dt class="col-sm-4">تاريخ الإصدار:</dt>
                            <dd class="col-sm-8">@(studentDetails.CivilstatusIDNumberAndNationalCardDate.ToString("yyyy-MM-dd") ?? "غير محدد")</dd>

                            <dt class="col-sm-4">الجنسية:</dt>
                            <dd class="col-sm-8">@studentDetails.Nationality</dd>

                            <dt class="col-sm-4">القومية:</dt>
                            <dd class="col-sm-8">@studentDetails.PoliticalNationalism</dd>

                            <dt class="col-sm-4">رقم شهادة الجنسية:</dt>
                            <dd class="col-sm-8">@studentDetails.NationalityCertificateNumber</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- معلومات أكاديمية -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-graduation-cap me-2"></i>المعلومات الأكاديمية</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">اسم المدرسة:</dt>
                            <dd class="col-sm-8">@studentDetails.SchoolName</dd>

                            <dt class="col-sm-4">الفرع:</dt>
                            <dd class="col-sm-8">@studentDetails.Branch</dd>

                            <dt class="col-sm-4">تاريخ التخرج:</dt>
                            <dd class="col-sm-8">@(studentDetails.DateOfSchoolGraduate.ToString("yyyy-MM-dd") ?? "غير محدد")</dd>

                            <dt class="col-sm-4">المجموع بدون إضافات:</dt>
                            <dd class="col-sm-8">@studentDetails.StudentTotalWithoutAdditions</dd>

                            <dt class="col-sm-4">المجموع مع إضافات:</dt>
                            <dd class="col-sm-8">@studentDetails.StudentTotalWithAdditions</dd>

                            <dt class="col-sm-4">المعدل بدون إضافات:</dt>
                            <dd class="col-sm-8">@studentDetails.StudentGPAWithoutAdditions</dd>

                            <dt class="col-sm-4">المعدل مع إضافات:</dt>
                            <dd class="col-sm-8">@studentDetails.StudentGPAWithAdditions</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- معلومات النظام -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>معلومات الحساب والنظام</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">اسم المستخدم:</dt>
                            <dd class="col-sm-8">@studentDetails.UserNameOnSite</dd>

                            <dt class="col-sm-4">حالة الحساب:</dt>
                            <dd class="col-sm-8">@studentDetails.StatusOnSite</dd>

                            <dt class="col-sm-4">حالة الطالب:</dt>
                            <dd class="col-sm-8">@studentDetails.Status</dd>

                            <dt class="col-sm-4">رصيد الحساب:</dt>
                            <dd class="col-sm-8">@studentDetails.AccountBalance</dd>

                            <dt class="col-sm-4">رقم الامتحاني:</dt>
                            <dd class="col-sm-8">@studentDetails.ExamNumber</dd>

                            <dt class="col-sm-4">الرقم السري:</dt>
                            <dd class="col-sm-8">@studentDetails.SecretNumber</dd>

                            <dt class="col-sm-4">تاريخ التسجيل:</dt>
                            <dd class="col-sm-8">@(studentDetails.RegistrationDate.ToString("yyyy-MM-dd") ?? "غير محدد")</dd>

                            <dt class="col-sm-4">رقم وصل الحسابات:</dt>
                            <dd class="col-sm-8">@studentDetails.AccountsReceiptNumber</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal تأكيد الحذف -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                هل أنت متأكد أنك تريد حذف الطالب <strong>@($"{studentDetails?.FirstName} {studentDetails?.LastName}")</strong> (رقم الطالب: <strong>@studentDetails?.StudentId</strong>)؟
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-danger" @onclick="DeleteStudentConfirmed">حذف</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string studentId { get; set; } = string.Empty;

    private StudentDto? studentDetails;
    private List<DepartmentDto> departments = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDepartments();
        await LoadStudentDetails();
    }

    private async Task LoadDepartments()
    {
        try
        {
            departments = await _departmentService.GetAllDepartmentsAsync();
        }
        catch (Exception ex)
        {
            // Log error
            Console.WriteLine($"Error loading departments: {ex.Message}");
        }
    }

    private async Task LoadStudentDetails()
    {
        try
        {
            studentDetails = await _studentService.GetStudentByIdAsync(studentId); // Implement this method in your service
            if (studentDetails == null)
            {
                // Handle case where student is not found, maybe redirect
                Console.WriteLine($"Student with ID {studentId} not found.");
                Navigation.NavigateTo("/students"); // Redirect back to list
            }
        }
        catch (Exception ex)
        {
            // Log error
            Console.WriteLine($"Error loading student details: {ex.Message}");
        }
    }

    private string GetDepartmentName(int departmentId)
    {
        var department = departments.FirstOrDefault(d => d.Id == departmentId);
        return department?.Name ?? "غير محدد";
    }

    private string GetAcademicYear(DateTime registrationDate)
    {
        var years = DateTime.Now.Year - registrationDate.Year;
        return years switch
        {
            0 => "السنة الأولى",
            1 => "السنة الثانية",
            2 => "السنة الثالثة",
            3 => "السنة الرابعة",
            _ => "متخرج"
        };
    }


    private bool showDeleteModal = false;
    private void ConfirmAndDelete()
    {
        // Use JS interop to show the modal
        // Or manage state in Blazor if preferred
        showDeleteModal = true;
        // Example using JS (requires JS interop setup)
        // await JsRuntime.InvokeVoidAsync("showBootstrapModal", "#deleteModal");
    }

    private async Task DeleteStudentConfirmed()
    {
        try
        {
            await _studentService.DeleteStudentAsync(studentId);
            Navigation.NavigateTo("/students"); // Navigate back to the list
        }
        catch (Exception ex)
        {
            // Log error or show message
            Console.WriteLine($"Error deleting student: {ex.Message}");
            // Maybe show an error toast or message
        }
        finally
        {
            // Hide modal if using JS interop
            // await JsRuntime.InvokeVoidAsync("hideBootstrapModal", "#deleteModal");
            showDeleteModal = false;
        }
    }
}

