@implements IDisposable
@inject NavigationManager NavigationManager

<div class="top-row navbar navbar-dark bg-dark shadow-sm px-3">
    <div class="container-fluid">
        <a class="navbar-brand text-white fw-bold" href="/">الرئيسية</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler d-none" />

<div class="nav-scrollable bg-white shadow-sm border-end" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column py-3">
        <div class="nav-item px-3 mb-2">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i> الرئيسية
            </NavLink>
        </div>

        <div class="nav-item px-3 mb-2">
            <NavLink class="nav-link" href="academic-calendar">
                <i class="bi bi-calendar-event-fill me-2"></i> التقويم الأكاديمي
            </NavLink>
        </div>

        <div class="nav-item px-3 mb-2">
            <NavLink class="nav-link" href="students-managment">
                <i class="bi bi-people-fill me-2"></i> إدارة الطلاب
            </NavLink>
        </div>

        <div class="nav-item px-3 mb-2">
            <NavLink class="nav-link" href="admin/applications">
                <i class="bi bi-check2-square me-2"></i> قبول الطلاب من الإدارة
            </NavLink>
        </div>

        <div class="nav-item px-3 mb-2">
            <NavLink class="nav-link" href="documents">
                <i class="bi bi-folder2-open me-2"></i> إدارة الكتب الرسمية
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3 mb-2">
                    <NavLink class="nav-link" href="Account/Manage">
                        <i class="bi bi-person-circle me-2"></i> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3 mb-2">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link btn btn-link text-start p-0">
                            <i class="bi bi-box-arrow-right me-2"></i> تسجيل الخروج
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3 mb-2">
                    <NavLink class="nav-link" href="Account/Register">
                        <i class="bi bi-person-plus-fill me-2"></i> إنشاء حساب جديد
                    </NavLink>
                </div>
                <div class="nav-item px-3 mb-2">
                    <NavLink class="nav-link" href="Account/Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i> تسجيل الدخول
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

<style>
    .nav-scrollable {
        width: 250px;
        min-height: 100vh;
        background-color: #ffffff;
        border-right: 1px solid #e5e7eb;
    }

    .nav-link {
        color: black;
        font-size: 1rem;
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

        .nav-link:hover,
        .nav-link.active {
            background-color: #333;
            color: #10b981;
            font-weight: 500;
        }

        .nav-link i {
            font-size: 1.1rem;
            color: inherit;
        }

    form button.nav-link {
        background: none;
        border: none;
        color: #333;
    }

        form button.nav-link:hover {
            color: #dc2626;
        }
</style>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
