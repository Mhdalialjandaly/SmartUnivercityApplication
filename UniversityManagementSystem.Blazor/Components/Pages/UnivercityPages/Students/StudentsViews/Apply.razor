@page "/apply"
@inject NavigationManager Navigation
@inject UniversityDbContext _context
@rendermode InteractiveServer

<PageTitle>تقديم طلب الالتحاق - الجامعة الذكية</PageTitle>

<div class="application-page">
    <!-- شريط التقدم -->
    <div class="progress-steps">
        <div class="step @(currentStep >= 1 ? "active" : "")">
            <div class="step-number">1</div>
            <div class="step-label">المعلومات الشخصية</div>
        </div>
        <div class="step-connector @(currentStep >= 2 ? "active" : "")"></div>
        <div class="step @(currentStep >= 2 ? "active" : "")">
            <div class="step-number">2</div>
            <div class="step-label">معلومات الاتصال</div>
        </div>
        <div class="step-connector @(currentStep >= 3 ? "active" : "")"></div>
        <div class="step @(currentStep >= 3 ? "active" : "")">
            <div class="step-number">3</div>
            <div class="step-label">المعلومات الأكاديمية</div>
        </div>
        <div class="step-connector @(currentStep >= 4 ? "active" : "")"></div>
        <div class="step @(currentStep >= 4 ? "active" : "")">
            <div class="step-number">4</div>
            <div class="step-label">التأكيد</div>
        </div>
    </div>

    <div class="application-container">
        @if (applicationSubmitted)
        {
            <!-- حالة نجاح التقديم -->
            <div class="submission-success">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h2>تم تقديم طلبك بنجاح!</h2>
                <div class="success-details">
                    <p><span>رقم الطلب:</span> <strong>@submittedApplication.Id</strong></p>
                    <p>سيتم مراجعة طلبك من قبل الإدارة خلال 3-5 أيام عمل</p>
                    <p>سيتم إرسال تحديثات حالة الطلب إلى بريدك الإلكتروني</p>
                </div>
                <div class="success-actions">
                    <a href="/apply/status" class="btn btn-primary">
                        <i class="fas fa-search"></i> متابعة حالة الطلب
                    </a>
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-home"></i> العودة للرئيسية
                    </a>
                </div>
            </div>
        }
        else
        {
            <!-- نموذج التقديم -->
            <form @onsubmit="SubmitApplication">
                <!-- الخطوة 1: المعلومات الشخصية -->
                @if (currentStep == 1)
                {
                    <div class="form-step active">
                        <h3 class="step-title">
                            <i class="fas fa-user"></i> المعلومات الشخصية
                        </h3>

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="required">الاسم الأول</label>
                                <input type="text" @bind="application.FirstName" required />
                                <div class="form-hint">الاسم كما يظهر في الوثائق الرسمية</div>
                            </div>

                            <div class="form-group">
                                <label class="required">اسم العائلة</label>
                                <input type="text" @bind="application.LastName" required />
                            </div>

                            <div class="form-group">
                                <label class="required">تاريخ الميلاد</label>
                                <input type="date" @bind="application.BirthDate" required
                                       max="@DateTime.Now.AddYears(-16).ToString("yyyy-MM-dd")" />
                                <div class="form-hint">يجب أن يكون عمرك 16 سنة على الأقل</div>
                            </div>

                            <div class="form-group">
                                <label class="required">الجنس</label>
                                <select @bind="application.Gender" required>
                                    <option value="">اختر الجنس</option>
                                    <option value="ذكر">ذكر</option>
                                    <option value="أنثى">أنثى</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-next" @onclick="NextStep">
                                التالي <i class="fas fa-arrow-left"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- الخطوة 2: معلومات الاتصال -->
                @if (currentStep == 2)
                {
                    <div class="form-step active">
                        <h3 class="step-title">
                            <i class="fas fa-phone-alt"></i> معلومات الاتصال
                        </h3>

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="required">رقم الهاتف</label>
                                <input type="tel" @bind="application.Phone" required />
                                <div class="form-hint">سيتم استخدامه للتواصل معك</div>
                            </div>

                            <div class="form-group">
                                <label class="required">البريد الإلكتروني</label>
                                <input type="email" @bind="application.Email" required />
                                <div class="form-hint">سيتم إرسال التحديثات إلى هذا البريد</div>
                            </div>

                            <div class="form-group full-width">
                                <label class="required">العنوان الكامل</label>
                                <textarea rows="3" @bind="application.Address" required></textarea>
                                <div class="form-hint">المحافظة، المدينة، الحي، الشارع</div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-prev" @onclick="PrevStep">
                                <i class="fas fa-arrow-right"></i> السابق
                            </button>
                            <button type="button" class="btn btn-next" @onclick="NextStep">
                                التالي <i class="fas fa-arrow-left"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- الخطوة 3: المعلومات الأكاديمية -->
                @if (currentStep == 3)
                {
                    <div class="form-step active">
                        <h3 class="step-title">
                            <i class="fas fa-graduation-cap"></i> المعلومات الأكاديمية
                        </h3>

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="required">القسم المطلوب</label>
                                <select @bind="application.DepartmentId" required>
                                    <option value="">اختر القسم</option>
                                    @foreach (var dept in departments)
                                    {
                                        <option value="@dept.Id">@dept.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="required">المؤهل الدراسي</label>
                                <select @bind="application.EducationLevel" required>
                                    <option value="">اختر المؤهل</option>
                                    <option value="ثانوية عامة">ثانوية عامة</option>
                                    <option value="دبلوم">دبلوم</option>
                                    <option value="بكالوريوس">بكالوريوس</option>
                                    <option value="ماجستير">ماجستير</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="required">المعدل التراكمي</label>
                                <input type="number" step="0.01" min="50" max="100"
                                       @bind="application.GPA" required />
                                <div class="form-hint">يجب أن يكون بين 50% و 100%</div>
                            </div>

                            <div class="form-group full-width">
                                <label>شهادة المؤهل الدراسي</label>
                                <div class="file-upload">
                                    <label class="upload-area" for="certificateUpload">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span>اسحب الملف هنا أو انقر للاختيار</span>
                                        <span class="file-info">@(string.IsNullOrEmpty(fileName) ? "لم يتم اختيار ملف" : fileName)</span>
                                    </label>
                                 <button id="certificateUpload" type="file"
                                     @onclick="HandleFileUpload"  
                                     accept=".pdf,.jpg,.jpeg,.png" />
                                    <div class="file-requirements">
                                        <i class="fas fa-info-circle"></i>
                                        صيغ الملفات المسموحة: PDF, JPG, PNG (الحجم الأقصى 5MB)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-prev" @onclick="PrevStep">
                                <i class="fas fa-arrow-right"></i> السابق
                            </button>
                            <button type="button" class="btn btn-next" @onclick="NextStep">
                                التالي <i class="fas fa-arrow-left"></i>
                            </button>
                        </div>
                    </div>
                }

                <!-- الخطوة 4: التأكيد -->
                @if (currentStep == 4)
                {
                    <div class="form-step active">
                        <h3 class="step-title">
                            <i class="fas fa-check-circle"></i> تأكيد المعلومات
                        </h3>

                        <div class="review-section">
                            <h4><i class="fas fa-user"></i> المعلومات الشخصية</h4>
                            <div class="review-grid">
                                <div class="review-item">
                                    <span>الاسم الكامل:</span>
                                    <strong>@application.FirstName @application.LastName</strong>
                                </div>
                                <div class="review-item">
                                    <span>تاريخ الميلاد:</span>
                                    <strong>@application.BirthDate.ToString("yyyy-MM-dd")</strong>
                                </div>
                                <div class="review-item">
                                    <span>الجنس:</span>
                                    <strong>@application.Gender</strong>
                                </div>
                            </div>
                        </div>

                        <div class="review-section">
                            <h4><i class="fas fa-phone-alt"></i> معلومات الاتصال</h4>
                            <div class="review-grid">
                                <div class="review-item">
                                    <span>رقم الهاتف:</span>
                                    <strong>@application.Phone</strong>
                                </div>
                                <div class="review-item">
                                    <span>البريد الإلكتروني:</span>
                                    <strong>@application.Email</strong>
                                </div>
                                <div class="review-item">
                                    <span>العنوان:</span>
                                    <strong>@application.Address</strong>
                                </div>
                            </div>
                        </div>

                        <div class="review-section">
                            <h4><i class="fas fa-graduation-cap"></i> المعلومات الأكاديمية</h4>
                            <div class="review-grid">
                                <div class="review-item">
                                    <span>القسم المطلوب:</span>
                                    <strong>@GetDepartmentName(application.DepartmentId)</strong>
                                </div>
                                <div class="review-item">
                                    <span>المؤهل الدراسي:</span>
                                    <strong>@application.EducationLevel</strong>
                                </div>
                                <div class="review-item">
                                    <span>المعدل التراكمي:</span>
                                    <strong>@application.GPA.ToString("F2")%</strong>
                                </div>
                                @if (!string.IsNullOrEmpty(fileName))
                                {
                                    <div class="review-item">
                                        <span>المرفقات:</span>
                                        <strong>@fileName</strong>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="terms-section">
                            <div class="form-check">
                                <input type="checkbox" id="acceptTerms" @bind="acceptTerms" required />
                                <label for="acceptTerms">
                                    أوافق على <a href="/terms" target="_blank">الشروط والأحكام</a>
                                    وأن جميع المعلومات المقدمة صحيحة وكاملة
                                </label>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-prev" @onclick="PrevStep">
                                <i class="fas fa-arrow-right"></i> السابق
                            </button>
                            <button type="submit" class="btn btn-submit" disabled="@(!acceptTerms || isSubmitting)">
                                @if (isSubmitting)
                                {
                                    <span><i class="fas fa-spinner fa-spin"></i> جاري التقديم...</span>
                                }
                                else
                                {
                                    <span><i class="fas fa-paper-plane"></i> تقديم الطلب</span>
                                }
                            </button>
                        </div>
                    </div>
                }
            </form>
        }
    </div>
</div>

<style>
    /* أنماط عامة */
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #34495e;
        --accent-color: #3498db;
        --success-color: #27ae60;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
        --border-color: #dfe6e9;
        --text-color: #333;
        --text-muted: #7f8c8d;
    }

    .application-page {
        font-family: 'Tajawal', sans-serif;
        background-color: #f5f7fa;
        min-height: 100vh;
        padding: 2rem 0;
    }

    /* شريط التقدم */
    .progress-steps {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 3rem;
        padding: 0 1rem;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .step-number {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e0e0e0;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }

    .step.active .step-number {
        background-color: var(--accent-color);
        color: white;
    }

    .step-label {
        color: var(--text-muted);
        font-size: 0.9rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .step.active .step-label {
        color: var(--primary-color);
        font-weight: 500;
    }

    .step-connector {
        flex: 1;
        height: 2px;
        background-color: #e0e0e0;
        margin: 0 10px;
        position: relative;
        top: -10px;
    }

        .step-connector.active {
            background-color: var(--accent-color);
        }

    /* حاوية النموذج */
    .application-container {
        max-width: 900px;
        margin: 0 auto;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 2rem;
    }

    /* الخطوات */
    .form-step {
        display: none;
    }

        .form-step.active {
            display: block;
            animation: fadeIn 0.5s ease;
        }

    .step-title {
        color: var(--primary-color);
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    /* شبكة النموذج */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-group.full-width {
        grid-column: span 2;
    }

    /* حقول الإدخال */
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--primary-color);
    }

        .form-group label.required::after {
            content: " *";
            color: var(--danger-color);
        }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        transition: border-color 0.3s;
    }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            border-color: var(--accent-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
        }

    .form-hint {
        font-size: 0.8rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
    }

    /* رفع الملفات */
    .file-upload {
        margin-top: 0.5rem;
    }

    .upload-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        border: 2px dashed var(--border-color);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .upload-area:hover {
            border-color: var(--accent-color);
        }

        .upload-area i {
            font-size: 2rem;
            color: var(--accent-color);
            margin-bottom: 0.5rem;
        }

    .file-info {
        margin-top: 0.5rem;
        font-weight: 500;
        color: var(--primary-color);
    }

    .file-requirements {
        font-size: 0.8rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    #certificateUpload {
        display: none;
    }

    /* قسم المراجعة */
    .review-section {
        margin-bottom: 2rem;
    }

        .review-section h4 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

    .review-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 6px;
    }

    .review-item {
        display: flex;
        justify-content: space-between;
    }

        .review-item span {
            color: var(--text-muted);
        }

        .review-item strong {
            color: var(--primary-color);
            font-weight: 500;
        }

    /* الشروط والأحكام */
    .terms-section {
        margin: 2rem 0;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 6px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .form-check input {
            width: auto;
        }

        .form-check label {
            margin-bottom: 0;
        }

        .form-check a {
            color: var(--accent-color);
            text-decoration: none;
        }

            .form-check a:hover {
                text-decoration: underline;
            }

    /* أزرار التنقل */
    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .btn-prev {
        background-color: white;
        border: 1px solid var(--border-color);
        color: var(--text-muted);
    }

        .btn-prev:hover {
            background-color: #f8f9fa;
            color: var(--primary-color);
        }

    .btn-next,
    .btn-submit {
        background-color: var(--accent-color);
        border: 1px solid var(--accent-color);
        color: white;
    }

        .btn-next:hover,
        .btn-submit:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        .btn-submit:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    /* حالة النجاح */
    .submission-success {
        text-align: center;
        padding: 2rem;
    }

    .success-icon {
        font-size: 4rem;
        color: var(--success-color);
        margin-bottom: 1.5rem;
    }

    .submission-success h2 {
        color: var(--primary-color);
        margin-bottom: 1.5rem;
    }

    .success-details {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 6px;
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

        .success-details p {
            margin-bottom: 0.75rem;
        }

        .success-details span {
            color: var(--text-muted);
        }

    .success-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    /* تأثيرات الحركة */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* تصميم متجاوب */
    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-group.full-width {
            grid-column: span 1;
        }

        .review-grid {
            grid-template-columns: 1fr;
        }

        .progress-steps {
            flex-wrap: wrap;
            gap: 1rem;
        }

        .step-connector {
            display: none;
        }
    }

    @@media (max-width: 576px) {
        .application-container {
            padding: 1.5rem;
        }

        .form-actions {
            flex-direction: column-reverse;
            gap: 1rem;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@code {
    private int currentStep = 1;
    private StudentApplicationDto application = new();
    private List<Department> departments = new();
    private bool applicationSubmitted = false;
    private bool isSubmitting = false;
    private bool acceptTerms = false;
    private string fileName = "";
    private StudentApplicationDto submittedApplication = new();

    protected override async Task OnInitializedAsync()
    {
        departments = await _context.Departments.ToListAsync();
    }

    private void NextStep()
    {
        if (currentStep < 4) currentStep++;
    }

    private void PrevStep()
    {
        if (currentStep > 1) currentStep--;
    }

    private async Task SubmitApplication()
    {
        if (!acceptTerms) return;

        isSubmitting = true;
        StateHasChanged();

        try
        {
            application.SubmitDate = DateTime.Now;
            application.Status = "قيد المراجعة";

            _context.StudentApplications.Add(new StudentApplication
                {
                    FirstName = application.FirstName,
                    LastName = application.LastName,
                    BirthDate = application.BirthDate,
                    Gender = application.Gender,
                    Phone = application.Phone,
                    Email = application.Email,
                    Address = application.Address,
                    DepartmentId = application.DepartmentId,
                    EducationLevel = application.EducationLevel,
                    GPA = application.GPA,
                    CertificatePath = fileName,
                    SubmitDate = application.SubmitDate,
                    Status = application.Status
                });

            await _context.SaveChangesAsync();

            submittedApplication = application;
            applicationSubmitted = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving application: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private string statusMessage = "";

    private async Task HandleFileUpload()
    {
      
    }

    private string GetDepartmentName(int departmentId)
    {
        var department = departments.FirstOrDefault(d => d.Id == departmentId);
        return department?.Name ?? "غير محدد";
    }
}