    <script>
    // تحديد جميع عناصر القائمة
    const menuItems = document.querySelectorAll('li a');

    // إضافة مستمع حدث النقر لكل عنصر
    menuItems.forEach(item => {
        item.addEventListener('click', function (e) {
            // منع السلوك الافتراضي إذا كان الرابط فارغًا أو يحتوي على #
            if (this.getAttribute('href') === '#' || this.getAttribute('href') === '') {
                e.preventDefault();
            }

            // إزالة class active من جميع العناصر
            menuItems.forEach(link => {
                link.classList.remove('active');
            });

            // إضافة class active للعنصر الذي تم النقر عليه
            this.classList.add('active');
        });
    });
    </script>



@code {
	private string currentUrl;

	protected override void OnInitialized()
	{
		currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
		NavigationManager.LocationChanged += OnLocationChanged;
	}	
	private void OnLocationChanged(object sender, LocationChangedEventArgs e)
	{
		currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
		StateHasChanged();
	}

	public void Dispose()
	{
		NavigationManager.LocationChanged -= OnLocationChanged;
	}
}


