@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة التحكم</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: #BEBCBD;
            color: #333;
            min-height: 100vh;
            overflow-x: hidden;
            overflow-y: auto;
        }

        /* القائمة الجانبية */
        .mcd-menu {
            list-style: none;
            padding: 0;
            margin-top: 80px;
            margin-right: 20px;
            border-radius: 2px;
            -moz-border-radius: 2px;
            -webkit-border-radius: 2px;
            width: 280px;
            height: auto;
            position: fixed;
            right: 5px;
            top: 40px;
            z-index: 1000;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.25); /* شفافة */
            backdrop-filter: blur(12px); /* بلور */
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

            .mcd-menu li {
                position: relative;
                margin: 8px 0;
                background-color:white;
            }

                .mcd-menu li a {
                    display: flex;
                    align-items: center;
                    text-decoration: none;
                    padding: 16px 25px;
                    color: #2c3e50;
                    text-align: right;
                    height: auto;
                    position: relative;
                    border-bottom: none;
                    transition: all 0.3s ease;
                    border-right: 4px solid transparent;
                    font-size: 18px;
                }

                    .mcd-menu li a i {
                        font-size: 24px;
                        margin-left: 15px;
                        width: 30px;
                        text-align: center;
                        color: #A65319;
                    }

                    .mcd-menu li a p {
                        margin: 0;
                        flex-grow: 1;
                    }

                    .mcd-menu li a strong {
                        display: block;
                        text-transform: uppercase;
                        font-size: 16px;
                        font-weight: 600;
                    }

                    .mcd-menu li a small {
                        display: block;
                        font-size: 12px;
                        opacity: 0.8;
                    }

                    .mcd-menu li a i,
                    .mcd-menu li a strong,
                    .mcd-menu li a small {
                        position: relative;
                        transition: all 300ms linear;
                    }

                .mcd-menu li:hover > a i {
                    opacity: 1;
                    -webkit-animation: moveFromTop 300ms ease-in-out;
                    -moz-animation: moveFromTop 300ms ease-in-out;
                    -o-animation: moveFromTop 300ms ease-in-out;
                    animation: moveFromTop 300ms ease-in-out;
                }

                .mcd-menu li:hover a strong {
                    opacity: 1;
                    -webkit-animation: moveFromLeft 300ms ease-in-out;
                    -moz-animation: moveFromLeft 300ms ease-in-out;
                    -o-animation: moveFromLeft 300ms ease-in-out;
                    animation: moveFromLeft 300ms ease-in-out;
                }

                .mcd-menu li:hover a small {
                    opacity: 1;
                    -webkit-animation: moveFromRight 300ms ease-in-out;
                    -moz-animation: moveFromRight 300ms ease-in-out;
                    -o-animation: moveFromRight 300ms ease-in-out;
                    animation: moveFromRight 300ms ease-in-out;
                }

                .mcd-menu li:hover > a {
                    color: #A65319;
                    background: #f8f9fa;
                    border-right: 4px solid #A65319;
                }

                .mcd-menu li a.active {
                    position: relative;
                    background: transparent !important;
                    border-right: 4px solid #A65319 !important;
                    border-left: 4px solid #A65319 !important;
                    color: #A65319 !important;
                    box-shadow: none !important;
                }

                    .mcd-menu li a.active:before {
                        content: "";
                        position: absolute;
                        top: 42%;
                        right: 0;
                        background: transparent !important;
                        border-right: 4px solid #A65319 !important;
                        color: #A65319 !important;
                        border-top: 5px solid transparent;
                        border-bottom: 5px solid transparent;
                    }

                    .mcd-menu li a.active:after {
                        content: "";
                        position: absolute;
                        top: 42%;
                        left: 0;
                        background: transparent !important;
                        border-left: 5px solid #A65319 !important;
                        border-top: 5px solid transparent;
                        border-bottom: 5px solid transparent;
                    }

                /* القوائم الفرعية */
                .mcd-menu li ul,
                .mcd-menu li ul li ul {
                    position: absolute;
                    height: auto;
                    min-width: 220px;
                    padding: 0;
                    margin: 0;
                    background: #BEBCBD;
                    opacity: 0;
                    visibility: hidden;
                    transition: all 300ms linear;
                    left: -224px;
                    top: 0;
                    border-right: 4px solid #333;
                    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                    border-radius: 0 0 0 6px;
                }

                    .mcd-menu li ul:before {
                        content: "";
                        position: absolute;
                        top: 25px;
                        right: -9px;
                        border-left: 5px solid #333;
                        border-bottom: 5px solid transparent;
                        border-top: 5px solid transparent;
                    }

                    .mcd-menu li:hover > ul,
                    .mcd-menu li ul li:hover > ul {
                        display: block;
                        opacity: 1;
                        visibility: visible;
                        left: -280px;
                    }

                    .mcd-menu li ul li a {
                        padding: 12px 20px;
                        text-align: right;
                        border: 0;
                        border-bottom: 1px solid #f1f2f6;
                        height: auto;
                        font-size: 16px;
                    }

                        .mcd-menu li ul li a i {
                            font-size: 18px;
                            margin-left: 10px;
                        }

                    .mcd-menu li ul li ul {
                        left: -224px;
                        top: 0;
                        border: 0;
                        border-right: 4px solid #A65319;
                    }

                        .mcd-menu li ul li ul:before {
                            content: "";
                            position: absolute;
                            top: 15px;
                            right: -9px;
                            border-left: 5px solid #A65319;
                            border-bottom: 5px solid transparent;
                            border-top: 5px solid transparent;
                        }

                    .mcd-menu li ul li:hover > ul {
                        top: 0px;
                        left: -224px;
                    }

        .stat-card:nth-child(1) i {
            color: #3498db; /* أزرق */
        }

        .stat-card:nth-child(2) i {
            color: #27ae60; /* أخضر */
        }

        .stat-card:nth-child(3) i {
            color: #e67e22; /* برتقالي */
        }

        .stat-card:nth-child(4) i {
            color: #9b59b6; /* بنفسجي */
        }

        /* المحتوى الرئيسي */
        .dashboard-content {
            margin-right: 330px;
            margin-top: 90px;
            padding: 30px;
            transition: all 0.3s;
            min-height: 80vh;
            width: calc(90% - 280px);
            border:outset 5px #333;
        }

        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
        }

        /* الهيدر */
        .header {
            background-color : darkgray;
            padding: 20px 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 12px #BEBCBD;
            display: flex;
            justify-content: space-between;
            align-items: center;
            /* تعديلات جديدة */
            position: fixed; /* يخلي الهيدر ثابت */
            top: 0;
            right: 0;
            width: 100%; /* ياخذ العرض كامل */
            height: 70px;
            border-radius: 0; /* نشيل الزوايا المدورة */
            z-index: 900; /* فوق المحتوى */
        }

        .welcome-message {
            color: #2c3e50;
            font-size: 28px;
            font-weight: 700;
        }

        .user-info {
            display: flex;
            align-items: center;
            background: #f8f9fa;
            padding: 10px 20px;
            border-radius: 30px;
            box-shadow: 0 2px 5px #BEBCBD;
        }

        /* بطاقات الإحصائيات */
        .stats-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: #BEBCBD;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 12px #BEBCBD;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            border-top: 4px solid #333;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            }

            .stat-card i {
                font-size: 42px;
                color: #333;
                margin-bottom: 15px;
            }

            .stat-card h3 {
                margin: 15px 0;
                color: #2c3e50;
                font-size: 32px;
            }

            .stat-card p {
                color: #7f8c8d;
                font-size: 16px;
                font-weight: 600;
            }

        /* أقسام لوحة التحكم */
        .dashboard-section {
            background: #BEBCBD;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 12px #BEBCBD;
            margin-bottom: 30px;
        }

            .dashboard-section h2 {
                color: #2c3e50;
                border-bottom: 2px solid #f1f2f6;
                padding-bottom: 15px;
                margin-top: 0;
                font-size: 24px;
                display: flex;
                align-items: center;
            }

                .dashboard-section h2 i {
                    margin-left: 10px;
                    color: #333;
                }

        /* قسم أقسام النظام */
        .system-sections-container {
            max-height: 500px;
            overflow-y: auto;
            padding: 30px;
            margin-top: 40px;
            border-radius: 10px;
            background: #BEBCBD;
            z-index:1000;
        }

        .system-sections {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 20px;
            padding: 10px;
            z-index: 1000;
        }

        .system-card {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            border-radius: 8px;
            background: #BEBCBD;
            cursor: pointer;
            transition: all 0.3s;
            border: 1px solid #BEBCBD;
        }

            .system-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                border-color: #333;
            }

            .system-card i {
                font-size: 42px;
                color: #333;
                margin-bottom: 10px;
            }

            .system-card span {
                font-weight: 600;
                color: #2c3e50;
                text-align: center;
            }

        /* التبليغات */
        .tooltip {
            position: absolute;
            background-color: #333;
            color: #BEBCBD;
            text-align: center;
            border-radius: 4px;
            padding: 5px 10px;
            font-size: 14px;
            z-index: 1001;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s, visibility 0.3s;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
        }

            .tooltip::after {
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                transform: translateX(-50%);
                border-width: 5px;
                border-style: solid;
                border-color: #333 transparent transparent transparent;
            }

        .system-card:hover .tooltip {
            opacity: 1;
            visibility: visible;
        }

        /* الأنشطة الحديثة */
        .recent-activities {
            list-style: none;
            padding: 0;
        }

            .recent-activities li {
                padding: 15px 0;
                border-bottom: 1px solid #f1f2f6;
                display: flex;
                align-items: center;
                transition: background 0.2s;
            }

                .recent-activities li:hover {
                    background: #f8f9fa;
                    padding-right: 10px;
                    border-radius: 5px;
                }

                .recent-activities li:last-child {
                    border-bottom: none;
                }

                .recent-activities li i {
                    color: #333;
                    margin-left: 15px;
                    font-size: 18px;
                }

        /* الدورات */
        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
        }

        .course-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s;
            border-left: 4px solid #333;
        }

            .course-card:hover {
                background: #edf2f7;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            }

            .course-card h4 {
                margin: 15px 0 8px;
                color: #2c3e50;
                font-size: 18px;
            }

            .course-card p {
                color: #7f8c8d;
                font-size: 14px;
                margin: 0;
            }

        /* زر القائمة في الجوال */
        .toggle-menu {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            background: #333;
            color: #BEBCBD;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 20px;
            cursor: pointer;
            z-index: 1100;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        /* شريط التمرير المخصص */
        .system-sections-container::-webkit-scrollbar {
            width: 8px;
        }

        .system-sections-container::-webkit-scrollbar-track {
            background: #BEBCBD;
            border-radius: 10px;
        }

        .system-sections-container::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 10px;
        }

            .system-sections-container::-webkit-scrollbar-thumb:hover {
                background: #333;
            }

        /* الأنيميشن */
        @@keyframes moveFromTop {
            from {
                opacity: 0;
                transform: translateY(200%);
            }

            to {
                opacity: 1;
                transform: translateY(0%);
            }
        }

        @@keyframes moveFromLeft {
            from {
                opacity: 0;
                transform: translateX(200%);
            }

            to {
                opacity: 1;
                transform: translateX(0%);
            }
        }

        @@keyframes moveFromRight {
            from {
                opacity: 0;
                transform: translateX(-200%);
            }

            to {
                opacity: 1;
                transform: translateX(0%);
            }
        }

        /* تحسينات للجوال */
        @@media (max-width: 992px) {
            .mcd-menu {
                transform: translateX(100%);
                width: 280px;
            }

                .mcd-menu.active {
                    transform: translateX(0);
                }

            .dashboard-content {
                margin-right: 280px;
                padding: 100px 30px 30px; /* 100px بدال 30px علشان يبتعد عن الهيدر */
                transition: all 0.3s;
                min-height: 100vh;
                width: calc(100% - 280px);
            }

            .toggle-menu {
                display: block;
            }

            .stats-cards {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }

            .system-sections {
                grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            }
        }

        @@media (max-width: 768px) {
            .header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .welcome-message {
                font-size: 24px;
            }

            .stats-cards {
                grid-template-columns: 1fr;
            }

            .system-sections {
                grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
            }

            .system-card {
                height: 120px;
                padding: 20px 10px;
            }

                .system-card i {
                    font-size: 36px;
                }
        }

        .system-sections a {
            text-decoration: none;             
        }

    </style>
</head>
<AuthorizeView>
    <Authorized>

        <body>
            <!-- زر القائمة للجوال -->
            <button class="toggle-menu" id="toggleMenu">
                <i class="fas fa-bars"></i>
            </button>


            <!-- الهيدر -->
            <div class="header">
                <div class="welcome-message">
                    <i class="fas fa-user-circle"></i> نظام الجامعة الذكية
                </div>
                <div class="user-info">
                    <i class="fas fa-bell"></i>
                    <span>الإشعارات</span>
                </div>
            </div>
            <!-- المحتوى الرئيسي -->
            <div class="dashboard-content">
                <div class="main-container">

                    <NavMenu />

                    @Body

                </div>
            </div>

            <script>
                // تفعيل القائمة في الجوال
                document.getElementById('toggleMenu').addEventListener('click', function () {
                    document.querySelector('.mcd-menu').classList.toggle('active');
                });

                // إغلاق القائمة عند النقر خارجها (للجوال)
                document.addEventListener('click', function (event) {
                    const menu = document.querySelector('.mcd-menu');
                    const toggleButton = document.getElementById('toggleMenu'); header

                    if (window.innerWidth <= 992) {
                        if (!menu.contains(event.target) && event.target !== toggleButton && !toggleButton.contains(event.target)) {
                            menu.classList.remove('active');
                        }
                    }
                });

                // تحديث القائمة عند تغيير حجم النافذة
                window.addEventListener('resize', function () {
                    const menu = document.querySelector('.mcd-menu');
                    if (window.innerWidth > 992) {
                        menu.classList.remove('active');
                    }
                });
            </script>
        </body>

    </Authorized>
</AuthorizeView>
</html>
<AuthorizeView>
    <NotAuthorized>
       @Body
    </NotAuthorized>
</AuthorizeView>