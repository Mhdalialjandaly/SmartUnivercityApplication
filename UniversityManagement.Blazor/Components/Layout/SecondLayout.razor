            </nav>
        </div>
        
        <!-- المحتوى الرئيسي -->
        <div class="main-content">
            <!-- الهيدر -->
            <header class="header">
                <div class="page-title">
                    <h1>لوحة تحكم الجامعة الذكية</h1>
                </div>
                
                <div class="header-actions">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
