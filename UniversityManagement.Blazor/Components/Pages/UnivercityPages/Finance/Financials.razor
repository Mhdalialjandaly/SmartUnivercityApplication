    {
        try
        {
            // تحميل الإحصائيات المالية العامة
            totalRevenue = await FinanceService.GetTotalRevenueAsync();
            totalExpenses = await FinanceService.GetTotalExpensesAsync();
            currentBalance = totalRevenue - totalExpenses;
            totalTransactions = await FinanceService.GetTotalTransactionsAsync();

            // تحميل المصروفات
            var esvalue = await FinanceService.GetEmployeeSalariesAsync();
            employeeSalaries = esvalue.Sum(e => e.Amount);
            var bmvalue = await FinanceService.GetBuildingMaintenanceAsync();
            buildingMaintenance = bmvalue.Sum(e => e.Amount);
            var eevalue = await FinanceService.GetEducationalEquipmentAsync();
            educationalEquipment = eevalue.Sum(e => e.Amount);
            var isvalue = await FinanceService.GetInternetServicesAsync();
            internetServices = isvalue.Sum(e => e.Amount);
            var uvalue = await FinanceService.GetUtilitiesAsync();
            utilities = uvalue.Sum(e => e.Amount);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading financial overview: {ex.Message}");
        }
