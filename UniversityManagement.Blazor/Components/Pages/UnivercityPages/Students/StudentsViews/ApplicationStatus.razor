@page "/apply/status"
@inject UniversityDbContext _context
@rendermode InteractiveServer
<PageTitle>حالة الطلب - الجامعة الذكية</PageTitle>
<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10 col-xl-8">
                        <!-- Header Section -->
                        <div class="text-center mb-5">
                            <h1 class="text-primary fw-bold">نظام متابعة طلبات القبول</h1>
                            <p class="text-muted">تابع حالة طلبك للالتحاق بالجامعة</p>
                            <div class="divider-center"></div>
                        </div>

                        <!-- Search Card -->
                        <div class="card shadow-sm border-0 mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <h4 class="fw-bold text-primary mb-0">
                                    <i class="fas fa-search me-2"></i>البحث عن طلب التقديم
                                </h4>
                            </div>
                            <div class="card-body pt-0">
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-8">
                                        <label class="form-label text-muted small">رقم الطلب</label>
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text bg-light">
                                                <i class="fas fa-file-alt text-primary"></i>
                                            </span>
                                            <input type="text"
                                                   class="form-control form-control-lg"
                                                   placeholder="أدخل رقم الطلب الخاص بك"
                                                   @bind="searchTerm" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button class="btn btn-primary btn-lg w-100 py-3"
                                                @onclick="SearchApplication">
                                            <i class="fas fa-search me-2"></i>بحث
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Application Status Card -->
                        @if (applicationStatus != null)
                        {
                            <div class="card shadow border-0 overflow-hidden">
                                <!-- Card Header -->
                                <div class="card-header bg-gradient-primary text-white py-4">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fw-bold mb-0">
                                                <i class="fas fa-file-contract me-2"></i>تفاصيل الطلب
                                            </h4>
                                            <p class="mb-0 small">معلومات طلب القبول الخاص بك</p>
                                        </div>
                                        <span class="badge bg-white text-primary fs-6 p-2">
                                            <i class="fas fa-hashtag me-1"></i> @applicationStatus.Id
                                        </span>
                                    </div>
                                </div>

                                <!-- Card Body -->
                                <div class="card-body">
                                    <!-- Personal Info Section -->
                                    <div class="row mb-4 g-4">
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <div class="icon-circle bg-primary-light">
                                                    <i class="fas fa-user text-primary"></i>
                                                </div>
                                                <div>
                                                    <h6 class="text-muted mb-1">الاسم الكامل</h6>
                                                    <p class="fw-bold mb-0">@($"{applicationStatus.FirstName} {applicationStatus.LastName}")</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <div class="icon-circle bg-primary-light">
                                                    <i class="fas fa-envelope text-primary"></i>
                                                </div>
                                                <div>
                                                    <h6 class="text-muted mb-1">البريد الإلكتروني</h6>
                                                    <p class="fw-bold mb-0">@applicationStatus.Email</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <div class="icon-circle bg-primary-light">
                                                    <i class="fas fa-building text-primary"></i>
                                                </div>
                                                <div>
                                                    <h6 class="text-muted mb-1">القسم المطلوب</h6>
                                                    <p class="fw-bold mb-0">@GetDepartmentName(applicationStatus.DepartmentId)</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <div class="icon-circle bg-primary-light">
                                                    <i class="fas fa-calendar-alt text-primary"></i>
                                                </div>
                                                <div>
                                                    <h6 class="text-muted mb-1">تاريخ التقديم</h6>
                                                    <p class="fw-bold mb-0">@applicationStatus.SubmitDate.ToString("yyyy-MM-dd")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Status Section -->
                                    <div class="status-section mb-4">
                                        <h5 class="section-title mb-4">
                                            <i class="fas fa-tasks me-2"></i>حالة الطلب
                                        </h5>

                                        @switch (applicationStatus.Status)
                                        {
                                            case "قيد المراجعة":
                                                <div class="status-card status-pending">
                                                    <div class="status-icon">
                                                        <i class="fas fa-clock"></i>
                                                    </div>
                                                    <div class="status-content">
                                                        <h4 class="status-title">قيد المراجعة</h4>
                                                        <p class="status-text">طلبك قيد المراجعة من قبل لجنة القبول. سيتم إعلامك بالنتيجة عبر البريد الإلكتروني خلال 3-5 أيام عمل.</p>
                                                        <div class="progress mt-3">
                                                            <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                                 style="width: 50%"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                break;

                                            case "مقبول":
                                                <div class="status-card status-approved">
                                                    <div class="status-icon">
                                                        <i class="fas fa-check-circle"></i>
                                                    </div>
                                                    <div class="status-content">
                                                        <h4 class="status-title">مبروك! تم قبول طلبك</h4>
                                                        <p class="status-text">تهانينا! لقد تم قبول طلبك للانضمام إلى جامعةنا.</p>

                                                        @if (!string.IsNullOrEmpty(applicationStatus.StudentId))
                                                        {
                                                            <div class="credentials-box mt-4">
                                                                <h6><i class="fas fa-key me-2"></i>معلومات الدخول:</h6>
                                                                <div class="row g-3 mt-2">
                                                                    <div class="col-md-6">
                                                                        <div class="form-floating">
                                                                            <input type="text"
                                                                                   class="form-control"
                                                                                   value="@applicationStatus.StudentId"
                                                                                   readonly />
                                                                            <label>رقم الطالب</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="form-floating">
                                                                            <input type="text"
                                                                                   class="form-control"
                                                                                   value="@applicationStatus.TemporaryPassword"
                                                                                   readonly />
                                                                            <label>كلمة المرور المؤقتة</label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="text-center mt-4">
                                                                    <a href="/student/setup" class="btn btn-success px-4 py-2">
                                                                        <i class="fas fa-user-cog me-2"></i>إعداد الحساب الآن
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                                break;

                                            case "مرفوض":
                                                <div class="status-card status-rejected">
                                                    <div class="status-icon">
                                                        <i class="fas fa-times-circle"></i>
                                                    </div>
                                                    <div class="status-content">
                                                        <h4 class="status-title">تم رفض الطلب</h4>
                                                        <p class="status-text">للأسف لم يتم قبول طلبك للقبول في الجامعة.</p>

                                                        @if (!string.IsNullOrEmpty(applicationStatus.RejectionReason))
                                                        {
                                                            <div class="rejection-reason mt-3">
                                                                <h6><i class="fas fa-comment-alt me-2"></i>سبب الرفض:</h6>
                                                                <div class="reason-box">@applicationStatus.RejectionReason</div>
                                                            </div>
                                                        }

                                                        <div class="mt-4">
                                                            <a href="/apply" class="btn btn-outline-primary">
                                                                <i class="fas fa-redo me-2"></i>تقديم طلب جديد
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                break;
                                        }
                                    </div>

                                    <!-- Help Section -->
                                    <div class="help-section border-top pt-4 mt-3">
                                        <h5 class="mb-3"><i class="fas fa-question-circle me-2"></i>هل تحتاج مساعدة؟</h5>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="help-box">
                                                    <i class="fas fa-phone-alt help-icon"></i>
                                                    <div>
                                                        <h6>الدعم الفني</h6>
                                                        <p class="mb-0">920000123</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="help-box">
                                                    <i class="fas fa-envelope help-icon"></i>
                                                    <div>
                                                        <h6>البريد الإلكتروني</h6>
                                                        <p class="mb-0">admission@university.edu</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (searchAttempted && applicationStatus == null)
                        {
                            <div class="card shadow border-0 text-center py-5">
                                <div class="card-body">
                                    <div class="empty-state">
                                        <i class="fas fa-file-search empty-icon"></i>
                                        <h4 class="mt-4">لم يتم العثور على طلب</h4>
                                        <p class="text-muted">لا يوجد طلب مطابق لرقم الطلب الذي أدخلته. يرجى التحقق والمحاولة مرة أخرى.</p>
                                        <button class="btn btn-primary mt-3" @onclick="() => searchAttempted = false">
                                            <i class="fas fa-redo me-2"></i>إعادة المحاولة
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

