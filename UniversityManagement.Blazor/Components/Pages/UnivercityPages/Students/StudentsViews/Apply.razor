    private void NextStep(int step)
    {
        bool isValid = true;

        if (step == 1)
        {
            isValid = !string.IsNullOrEmpty(application.FirstName) &&
                     !string.IsNullOrEmpty(application.LastName) &&
                     application.BirthDate != default &&
                     !string.IsNullOrEmpty(application.Gender);
        }
        else if (step == 2)
        {
            isValid = !string.IsNullOrEmpty(application.Phone) &&
                     !string.IsNullOrEmpty(application.Email) &&
                     !string.IsNullOrEmpty(application.Address);
        }
        else if (step == 3)
        {
            isValid = application.DepartmentId > 0 &&
                     !string.IsNullOrEmpty(application.EducationLevel) &&
                     application.GPA > 0;
        }

        if (isValid && currentStep < 4)
        {
            currentStep++;
        }
        else if (!isValid)
        {
            // يمكن إضافة رسالة خطأ للمستخدم هنا
            Console.WriteLine("الرجاء إكمال جميع الحقول المطلوبة");
        }
    }

    private void PrevStep()
    {
        if (currentStep > 1) currentStep--;
    }

    private async Task HandleFileUpload(InputFileChangeEventArgs e)
    {
        try
        {
            // التحقق من صحة الملف
            if (e.File == null || e.File.Size == 0)
            {
                throw new ArgumentException("الرجاء اختيار ملف صالح");
            }

            // تحديد مسار الحفظ
            var uploadsFolder = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "uploads");
            Directory.CreateDirectory(uploadsFolder); // إنشاء المجلد إذا لم يكن موجوداً

            // حفظ الملف مباشرة بدون MemoryStream
            var filePath = Path.Combine(uploadsFolder, e.File.Name);

            await using var stream = new FileStream(filePath, FileMode.Create);
            await e.File.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024).CopyToAsync(stream);

            // تخزين المرجع
            certificateFile = e.File;
            fileName = e.File.Name;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"خطأ في تحميل الملف: {ex.Message}");
            // يمكنك إضافة عرض رسالة للمستخدم هنا
        }
    }

    private async Task SubmitApplication()
    {
        if (!acceptTerms) return;

        isSubmitting = true;

        try
        {
            // التحقق مرة أخرى من وجود الملف
            if (certificateFile != null && !string.IsNullOrEmpty(fileName))
            {
                var folderPath = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "uploads");
                var filePath = Path.Combine(folderPath, fileName);

                // تأكيد وجود الملف فعلياً
                if (!File.Exists(filePath))
                {
                    throw new FileNotFoundException("الملف المرفوع غير موجود على الخادم");
                }
            }

            var newApplication = new StudentApplication
                {
                    FirstName = application.FirstName,
                    LastName = application.LastName,
                    BirthDate = application.BirthDate,
                    Gender = application.Gender,
                    Phone = application.Phone,
                    Email = application.Email,
                    Address = application.Address,
                    DepartmentId = application.DepartmentId,
                    EducationLevel = application.EducationLevel,
                    GPA = application.GPA,
                    CertificatePath = fileName,
                    SubmitDate = DateTime.Now,
                    Status = "قيد المراجعة",
                    NationalityId = application.NationalityId
                };

            _context.StudentApplications.Add(newApplication);
            await _context.SaveChangesAsync();

            submittedApplication = newApplication;
            applicationSubmitted = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"خطأ في حفظ الطلب: {ex.Message}");
            // يمكنك إضافة عرض رسالة للمستخدم هنا
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private string GetDepartmentName(int departmentId)
    {
        var department = departments.FirstOrDefault(d => d.Id == departmentId);
        return department?.Name ?? "غير محدد";
    }
