@page "/academic/archive"
@attribute [Authorize]
@inject IArchiveService ArchiveService
@inject IDepartmentServices DepartmentService
@inject IJSRuntime JSRuntime

@rendermode InteractiveServer

<PageTitle>إدارة الأرشيف الأكاديمي - الجامعة الذكية</PageTitle>

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="content" data-background-color="dark">
                <div class="page-inner">
                    <!-- شريط العنوان والتنقل -->
                    <div class="page-header">
                        <div class="d-flex align-items-center">
                            <h4 class="page-title text-white">
                                <i class="fas fa-archive me-2"></i> إدارة الأرشيف الأكاديمي
                            </h4>
                            <div class="ml-md-auto">
                                <ul class="breadcrumbs">
                                    <li class="nav-home">
                                        <a href="/">
                                            <i class="fas fa-home text-white"></i>
                                        </a>
                                    </li>
                                    <li class="separator">
                                        <i class="fas fa-chevron-left text-white"></i>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/academic" class="text-white">الشؤون الأكاديمية</a>
                                    </li>
                                    <li class="separator">
                                        <i class="fas fa-chevron-left text-white"></i>
                                    </li>
                                    <li class="nav-item">
                                        <span class="text-white">الأرشيف الأكاديمي</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- بطاقات الإحصائيات -->
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card card-dark bg-primary-gradient">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h2 class="mb-0">@archiveStats.TotalDocuments</h2>
                                            <p class="mb-0">إجمالي الوثائق</p>
                                        </div>
                                        <div class="icon-shape bg-primary-light rounded-circle">
                                            <i class="fas fa-file-alt text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <a href="#" @onclick="() => LoadArchiveItems(ArchiveType.All)" class="text-white">
                                            عرض الكل <i class="fas fa-arrow-left"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card card-dark bg-success-gradient">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h2 class="mb-0">@archiveStats.ActiveDocuments</h2>
                                            <p class="mb-0">وثائق نشطة</p>
                                        </div>
                                        <div class="icon-shape bg-success-light rounded-circle">
                                            <i class="fas fa-check-circle text-success"></i>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <a href="#" @onclick="() => LoadArchiveItems(ArchiveType.Active)" class="text-white">
                                            عرض النشطة <i class="fas fa-arrow-left"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card card-dark bg-warning-gradient">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h2 class="mb-0">@archiveStats.ExpiredDocuments</h2>
                                            <p class="mb-0">وثائق منتهية</p>
                                        </div>
                                        <div class="icon-shape bg-warning-light rounded-circle">
                                            <i class="fas fa-exclamation-triangle text-warning"></i>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <a href="#" @onclick="() => LoadArchiveItems(ArchiveType.Expired)" class="text-white">
                                            عرض المنتهية <i class="fas fa-arrow-left"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card card-dark bg-info-gradient">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h2 class="mb-0">@archiveStats.TotalStorageUsed MB</h2>
                                            <p class="mb-0">مساحة التخزين</p>
                                        </div>
                                        <div class="icon-shape bg-info-light rounded-circle">
                                            <i class="fas fa-database text-info"></i>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <a href="#" class="text-white">
                                            تحليل التخزين <i class="fas fa-arrow-left"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- لوحة التحكم الرئيسية -->
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <h4 class="card-title">قائمة الوثائق الأرشيفية</h4>
                                <div class="ml-auto">
                                    <button class="btn btn-primary btn-round" @onclick="ShowAddModal">
                                        <i class="fas fa-plus me-2"></i>وثيقة جديدة
                                    </button>
                                    <div class="dropdown d-inline">
                                        <button class="btn btn-secondary btn-round dropdown-toggle" type="button" data-toggle="dropdown">
                                            <i class="fas fa-bolt me-2"></i>روابط سريعة
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/academic/courses"><i class="fas fa-book me-2"></i>المقررات الدراسية</a>
                                            <a class="dropdown-item" href="/academic/exams"><i class="fas fa-file-alt me-2"></i>الامتحانات</a>
                                            <a class="dropdown-item" href="/academic/research"><i class="fas fa-search me-2"></i>الأبحاث</a>
                                            <a class="dropdown-item" href="/academic/projects"><i class="fas fa-project-diagram me-2"></i>المشاريع</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <!-- علامات التبويب -->
                            <ul class="nav nav-pills nav-secondary" id="archiveTabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="all-tab" data-toggle="pill" href="#all" role="tab" @onclick="() => LoadArchiveItems(ArchiveType.All)">
                                        <i class="fas fa-list me-2"></i>الكل
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="active-tab" data-toggle="pill" href="#active" role="tab" @onclick="() => LoadArchiveItems(ArchiveType.Active)">
                                        <i class="fas fa-check-circle me-2"></i>نشطة
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="expired-tab" data-toggle="pill" href="#expired" role="tab" @onclick="() => LoadArchiveItems(ArchiveType.Expired)">
                                        <i class="fas fa-exclamation-triangle me-2"></i>منتهية
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="important-tab" data-toggle="pill" href="#important" role="tab" @onclick="() => LoadArchiveItems(ArchiveType.Important)">
                                        <i class="fas fa-star me-2"></i>مهمة
                                    </a>
                                </li>
                            </ul>

                            <!-- شريط البحث والتصفية -->
                            <div class="row mt-3">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <div class="input-icon">
                                            <input type="text" class="form-control" placeholder="ابحث في الأرشيف..." @bind="searchTerm" @oninput="SearchArchiveItems">
                                            <span class="input-icon-addon">
                                                <i class="fas fa-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select class="form-control" @onchange="FilterByDepartment">
                                            <option value="">كل الأقسام</option>
                                            @foreach (var dept in departments)
                                            {
                                                <option value="@dept.Id">@dept.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- جدول الوثائق -->
                            <div class="table-responsive" dir="rtl">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="50px">#</th>
                                            <th>الوثيقة</th>
                                            <th width="120px">النوع</th>
                                            <th width="150px">القسم</th>
                                            <th width="120px">تاريخ الإضافة</th>
                                            <th width="120px">تاريخ الانتهاء</th>
                                            <th width="100px">الحالة</th>
                                            <th width="80px">إجراءات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (archiveItems != null && archiveItems.Any())
                                        {
                                            @for (int i = 0; i < archiveItems.Count; i++)
                                            {
                                                var item = archiveItems[i];
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="archive-icon bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                                                <i class="fas @GetFileTypeIcon(item.DocumentType.ToString()) text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <span class="d-block font-weight-bold">@item.Title</span>
                                                                <small class="text-muted">@item.Description</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-secondary">@item.DocumentType</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-primary">
                                                            @GetDepartmentName(item.DepartmentId)
                                                        </span>
                                                    </td>
                                                    <td>@(item.UploadDate != default ? item.UploadDate.ToString("yyyy-MM-dd") : "غير محدد")</td>
                                                    <td>
                                                        <span class="@(item.ExpiryDate.HasValue && item.ExpiryDate < DateTime.Now ? "text-danger" : "")">
                                                            @(item.ExpiryDate.HasValue ? item.ExpiryDate.Value.ToString("yyyy-MM-dd") : "غير محدد")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge @GetStatusClass(item.Status, item.ExpiryDate)">
                                                            @GetStatusText(item.Status, item.ExpiryDate)
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                                                <i class="fas fa-ellipsis-v"></i>
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a class="dropdown-item" href="javascript:void(0)" @onclick="() => DownloadFile(item.Id)">
                                                                    <i class="fas fa-download me-2"></i>تحميل
                                                                </a>
                                                                <a class="dropdown-item" href="javascript:void(0)" @onclick="() => ViewDetails(item.Id)">
                                                                    <i class="fas fa-eye me-2"></i>عرض
                                                                </a>
                                                                <a class="dropdown-item" href="javascript:void(0)" @onclick="() => EditItem(item)">
                                                                    <i class="fas fa-edit me-2"></i>تعديل
                                                                </a>
                                                                <div class="dropdown-divider"></div>
                                                                <a class="dropdown-item text-danger" href="javascript:void(0)" @onclick="() => DeleteItem(item.Id)">
                                                                    <i class="fas fa-trash me-2"></i>حذف
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8">
                                                    <div class="text-center py-5">
                                                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                                                        <p class="text-muted">لا توجد وثائق في الأرشيف</p>
                                                        <button class="btn btn-primary" @onclick="ShowAddModal">
                                                            <i class="fas fa-plus me-2"></i>إضافة وثيقة جديدة
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- ترقيم الصفحات -->
                            @if (totalPages > 1)
                            {
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div class="text-muted">
                                        عرض @((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, archiveStats.TotalDocuments) من @archiveStats.TotalDocuments
                                    </div>
                                    <ul class="pagination">
                                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(1)">
                                                <i class="fas fa-angle-double-right"></i>
                                            </a>
                                        </li>
                                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(currentPage - 1)">
                                                <i class="fas fa-angle-right"></i>
                                            </a>
                                        </li>

                                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" href="#" @onclick="() => GoToPage(i)">@i</a>
                                            </li>
                                        }

                                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(currentPage + 1)">
                                                <i class="fas fa-angle-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                            <a class="page-link" href="#" @onclick="() => GoToPage(totalPages)">
                                                <i class="fas fa-angle-double-left"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- مودال إضافة وثيقة جديدة -->
<div class="modal fade" id="addArchiveItemModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-file-alt me-2"></i>إضافة وثيقة جديدة
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">عنوان الوثيقة *</label>
                            <input type="text" class="form-control" placeholder="أدخل عنوان الوثيقة" @bind="newItem.Title" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">نوع الوثيقة *</label>
                            <select class="form-select" @bind="newItem.DocumentType" required>
                                <option value="">اختر نوع الوثيقة</option>
                                <option value="Document">مقرر دراسي</option>
                                <option value="Image">امتحان</option>
                                <option value="Video">بحث</option>
                                <option value="Audio">مشروع</option>
                                <option value="Other">تقارير</option>
                                <option value="Other">أخرى</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">القسم *</label>
                            <select class="form-select" @bind="newItem.DepartmentId" required>
                                <option value="">اختر القسم</option>
                                @foreach (var dept in departments)
                                {
                                    <option value="@dept.Id">@dept.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">تاريخ الانتهاء</label>
                            <input type="date" class="form-control" @bind="newItem.ExpiryDate">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">الحالة</label>
                            <select class="form-select" @bind="newItem.Status">
                                <option value="نشطة">نشطة</option>
                                <option value="مؤرشفة">مؤرشفة</option>
                                <option value="مهمة">مهمة</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الوصف</label>
                        <textarea class="form-control" rows="3" placeholder="أدخل وصف الوثيقة" @bind="newItem.Description"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">تحميل الملف</label>
                        <InputFile class="form-control" OnChange="HandleFileUpload" />
                        @if (fileToUpload != null)
                        {
                            <div class="mt-2">
                                <small class="text-muted">@fileToUpload.Name (@(fileToUpload.Size / 1024) KB)</small>
                            </div>
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times me-2"></i>إلغاء
                </button>
                <button type="button" class="btn btn-primary" @onclick="AddArchiveItem">
                    <i class="fas fa-save me-2"></i>حفظ الوثيقة
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ArchiveItemDto> archiveItems = new();
    private List<DepartmentDto> departments = new();
    private ArchiveItemDto newItem = new();
    private ArchiveItemDto editingItem = new();
    private ArchiveStatsDto archiveStats = new();
    private string searchTerm = "";
    private int selectedDepartmentId = 0;
    private ArchiveType currentType = ArchiveType.All;
    private IBrowserFile fileToUpload;

    // ترقيم الصفحات
    private int currentPage = 1;
    private int totalPages = 1;
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadDepartments();
        await LoadArchiveStats();
        await LoadArchiveItems(ArchiveType.All);
    }

    private async Task LoadDepartments()
    {
        try
        {
            departments = await DepartmentService.GetAllDepartmentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading departments: {ex.Message}");
        }
    }

    private async Task LoadArchiveItems(ArchiveType type)
    {
        try
        {
            currentType = type;
            var result = await ArchiveService.GetArchiveItemsAsync(
                currentPage,
                pageSize,
                searchTerm,
                selectedDepartmentId,
                type);

            archiveItems = result.Data.ToList() ?? new List<ArchiveItemDto>();
            totalPages = result.TotalPages;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading archive items: {ex.Message}");
            archiveItems = new List<ArchiveItemDto>();
        }
    }

    private async Task LoadArchiveStats()
    {
        try
        {
            archiveStats = await ArchiveService.GetArchiveStatsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading archive statistics: {ex.Message}");
        }
    }

    private async Task SearchArchiveItems(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        currentPage = 1;
        await LoadArchiveItems(currentType);
    }

    private async Task FilterByDepartment(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        selectedDepartmentId = string.IsNullOrEmpty(value) ? 0 : int.Parse(value);
        currentPage = 1;
        await LoadArchiveItems(currentType);
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await LoadArchiveItems(currentType);
        }
    }

    private void HandleFileUpload(InputFileChangeEventArgs e)
    {
        fileToUpload = e.File;
    }

    private async Task AddArchiveItem()
    {
        try
        {
            newItem.UploadDate = DateTime.Now;
            newItem.UploadedBy = "المسؤول"; // يجب استبدالها بالمستخدم الحالي

            if (fileToUpload != null)
            {
                newItem.FileName = fileToUpload.Name;
                newItem.FileSize = (int)fileToUpload.Size;
            }

            var createdItem = await ArchiveService.AddArchiveItemAsync(newItem);

            // إعادة تعيين النموذج
            newItem = new ArchiveItemDto();
            fileToUpload = null;

            // تحديث القائمة والإحصائيات
            await LoadArchiveStats();
            await LoadArchiveItems(currentType);

            // إغلاق المودال
            await JSRuntime.InvokeVoidAsync("$('#addArchiveItemModal').modal('hide')");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding archive item: {ex.Message}");
        }
    }

    private async Task DownloadFile(int itemId)
    {
        try
        {
            // كود لتحميل الملف من الخادم
            var item = archiveItems.FirstOrDefault(i => i.Id == itemId);
            if (item != null)
            {
                // تنفيذ عملية التحميل
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error downloading file: {ex.Message}");
        }
    }

    private async Task ViewDetails(int itemId)
    {
        // كود لعرض تفاصيل الوثيقة
    }

    private async Task EditItem(ArchiveItemDto item)
    {
        editingItem = item;
        // فتح مودال التعديل
    }

    private async Task DeleteItem(int itemId)
    {
        try
        {
            await ArchiveService.DeleteArchiveItemAsync(itemId);
            await LoadArchiveStats();
            await LoadArchiveItems(currentType);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting archive item: {ex.Message}");
        }
    }

    private void ShowAddModal()
    {
        newItem = new ArchiveItemDto();
        fileToUpload = null;
        JSRuntime.InvokeVoidAsync("$('#addArchiveItemModal').modal('show')");
    }

    private string GetDepartmentName(int departmentId)
    {
        var department = departments.FirstOrDefault(d => d.Id == departmentId);
        return department?.Name ?? "غير محدد";
    }

    private string GetFileTypeIcon(string fileType)
    {
        if (fileType.Contains("pdf", StringComparison.OrdinalIgnoreCase)) return "fa-file-pdf";
        if (fileType.Contains("word", StringComparison.OrdinalIgnoreCase)) return "fa-file-word";
        if (fileType.Contains("excel", StringComparison.OrdinalIgnoreCase)) return "fa-file-excel";
        if (fileType.Contains("image", StringComparison.OrdinalIgnoreCase)) return "fa-file-image";
        if (fileType.Contains("zip", StringComparison.OrdinalIgnoreCase)) return "fa-file-archive";
        return "fa-file";
    }

    private string GetStatusClass(string status, DateTime? expiryDate)
    {
        if (expiryDate.HasValue && expiryDate < DateTime.Now) return "bg-danger";

        return status switch
        {
            "نشطة" => "bg-success",
            "مؤرشفة" => "bg-secondary",
            "مهمة" => "bg-warning",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText(string status, DateTime? expiryDate)
    {
        if (expiryDate.HasValue && expiryDate < DateTime.Now) return "منتهية";
        return status;
    }
}