                        <label>تاريخ الإنشاء:</label>
                        <div class="form-control">@selectedAssessment.CreatedDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    @if (selectedAssessment.UpdatedDate.HasValue)
                    {
                        <div class="form-group">
                            <label>آخر تحديث:</label>
                            <div class="form-control">@selectedAssessment.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseDetailsModal">
                    <i class="fas fa-times"></i> إغلاق
                </button>
                @if (selectedAssessment.Status != AssessmentStatus.Completed)
                {
                    <button class="btn-primary" @onclick="() => ShowEditAssessmentModal(selectedAssessment)">
                        <i class="fas fa-edit"></i> تعديل
                    </button>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<AssessmentDto> assessments = new();
    private string searchTerm = "";
    private bool isLoading = true;

    // متغيرات المودال
    private bool showAssessmentModal = false;
    private bool showDetailsModal = false;
    private bool isSubmitting = false;
    private bool isEditMode = false;
    private string successMessage = "";
    private List<DepartmentDto> departments = new();
    private bool departmentsLoading = false;

    // كائنات التقييم
    private AssessmentDto currentAssessment = new AssessmentDto();
    private AssessmentDto selectedAssessment = new AssessmentDto();

    protected override async Task OnInitializedAsync()
    {
        await LoadAssessments();
        await LoadDepartments();
    }

    private async Task LoadDepartments()
    {
        try
        {
            departmentsLoading = true;
            StateHasChanged();
            var result = await DepartmentService.GetAllDepartmentsAsync();
            departments = result ?? new List<DepartmentDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading departments: {ex.Message}");
            departments = new List<DepartmentDto>();
        }
        finally
        {
            departmentsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadAssessments()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            var result = await AssessmentService.GetAllAssessmentsAsync();
            assessments = result ?? new List<AssessmentDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading assessments: {ex.Message}");
            assessments = new List<AssessmentDto>();
            ToastService.ShowError("حدث خطأ أثناء تحميل بيانات التقييمات", "خطأ");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchAssessments()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var result = await AssessmentService.SearchAssessmentsAsync(searchTerm);
                assessments = result ?? new List<AssessmentDto>();
            }
            else
            {
                await LoadAssessments();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching assessments: {ex.Message}");
            assessments = new List<AssessmentDto>();
            ToastService.ShowError("حدث خطأ أثناء البحث في بيانات التقييمات", "خطأ");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetStatusBadgeClass(AssessmentStatus status)
    {
        return status switch
        {
            AssessmentStatus.Completed => "badge-success",
            AssessmentStatus.InProgress => "badge-warning",
            AssessmentStatus.Pending => "badge-primary",
            AssessmentStatus.Upcoming => "badge-primary",
            AssessmentStatus.Cancelled => "badge-danger",
            _ => "badge-primary"
        };
    }

    private string GetStatusText(AssessmentStatus status)
    {
        return status switch
        {
            AssessmentStatus.Completed => "مكتمل",
            AssessmentStatus.InProgress => "قيد التقييم",
            AssessmentStatus.Pending => "معلق",
            AssessmentStatus.Upcoming => "قريبًا",
            AssessmentStatus.Cancelled => "ملغى",
            _ => "غير محدد"
        };
    }

    private string GetAssessmentTypeText(AssessmentType type)
    {
        return type switch
        {
            AssessmentType.Exam => "اختبار",
            AssessmentType.Project => "مشروع",
            AssessmentType.Homework => "واجب",
            AssessmentType.Quiz => "اختبار قصير",
            AssessmentType.Presentation => "عرض تقديمي",
            AssessmentType.Lab => "مختبر",
            _ => "غير محدد"
        };
    }

    private string GetDurationText(int durationInMinutes)
    {
        if (durationInMinutes < 60)
            return $"{durationInMinutes} دقيقة";
        else if (durationInMinutes < 1440) // أقل من يوم
            return $"{durationInMinutes / 60} ساعة";
        else
            return $"{durationInMinutes / 1440} يوم";
    }

    private int GetCompletionPercentage(AssessmentDto assessment)
    {
        if (assessment.TotalStudents == 0) return 0;
        return (int)((assessment.CompletedCount * 100) / assessment.TotalStudents);
    }

    // دوال المودال الموحد للإضافة والتعديل
    private void ShowAddAssessmentModal()
    {
        isEditMode = false;
        currentAssessment = new AssessmentDto
            {
                Date = DateTime.Now.AddDays(7), // تاريخ افتراضي بعد أسبوع
                Duration = 90, // مدة افتراضية 90 دقيقة
                Type = AssessmentType.Exam,
                Status = AssessmentStatus.Pending,
                CreatedDate = DateTime.Now
            };
        showAssessmentModal = true;
        successMessage = "";
    }

    private void ShowEditAssessmentModal(AssessmentDto assessment)
    {
        isEditMode = true;
        currentAssessment = new AssessmentDto
            {
                Id = assessment.Id,
                Title = assessment.Title,
                Code = assessment.Code,
                Description = assessment.Description,
                Date = assessment.Date,
                Duration = assessment.Duration,
                Type = assessment.Type,
                Status = assessment.Status,
                DepartmentId = assessment.DepartmentId,
                CreatedDate = assessment.CreatedDate,
                UpdatedDate = assessment.UpdatedDate
            };
        showAssessmentModal = true;
        successMessage = "";
    }

    private void CloseAssessmentModal()
    {
        showAssessmentModal = false;
        currentAssessment = new AssessmentDto();
        successMessage = "";
    }

    private async Task SaveAssessment()
    {
        try
        {
            isSubmitting = true;
            StateHasChanged();

            if (isEditMode)
            {
                // تحديث التقييم
                currentAssessment.UpdatedDate = DateTime.Now;
                await AssessmentService.UpdateAssessmentAsync(currentAssessment.Id, currentAssessment);
                ToastService.ShowSuccess("تم تحديث بيانات التقييم بنجاح", "نجاح");
            }
            else
            {
                // إضافة تقييم جديد
                currentAssessment.CreatedDate = DateTime.Now;
                await AssessmentService.CreateAssessmentAsync(currentAssessment);
                ToastService.ShowSuccess("تم إضافة التقييم بنجاح", "نجاح");
            }

            await LoadAssessments(); // إعادة تحميل قائمة التقييمات
            CloseAssessmentModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving assessment: {ex.Message}");
            ToastService.ShowError($"حدث خطأ أثناء {(isEditMode ? "تحديث" : "إضافة")} التقييم", "خطأ");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    // دوال مودال التفاصيل
    private void ShowAssessmentDetailsModal(AssessmentDto assessment)
    {
        selectedAssessment = assessment;
        showDetailsModal = true;
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        selectedAssessment = new AssessmentDto();
    }
}