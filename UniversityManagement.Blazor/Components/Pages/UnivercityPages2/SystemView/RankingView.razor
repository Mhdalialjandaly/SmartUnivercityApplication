<div class="faculty-dashboard">
    <!-- الشريط الجانبي -->
    <NavMenu2 />

    <!-- المحتوى الرئيسي -->
    <div class="main-content">
        <!-- الشريط العلوي -->
        <div class="top-bar">
            <div class="search-box">
                <input type="text" placeholder="بحث في التقييمات..." @bind="searchTerm" />
                <button class="mil-button mil-button-sm" @onclick="SearchAssessments"><i class="fas fa-search"></i></button>
            </div>
            <div class="user-profile">
                <div class="user-info">
                    <h4>د. أحمد محمد</h4>
                    <p>أستاذ مساعد - قسم علوم الحاسب</p>
                </div>
                <img src="https://via.placeholder.com/40" alt="User">
            </div>
        </div>

        <!-- رأس الصفحة -->
        <div class="page-header">
            <h1><i class="fas fa-clipboard-list"></i> التقييمات</h1>
            <button class="mil-button" @onclick="ShowAddAssessmentModal"><i class="fas fa-plus"></i> إضافة تقييم جديد</button>
        </div>

        <!-- عرض التحميل -->
        @if (isLoading)
        {
            <div class="loading">
                <i class="fas fa-spinner"></i>
                <p>جاري تحميل بيانات التقييمات...</p>
            </div>
        }
        else if (assessments == null || !assessments.Any())
        {
            <div class="no-assessments">
                <i class="fas fa-clipboard-list"></i>
                <p>لا توجد بيانات تقييمات حالياً.</p>
                <button class="mil-button" @onclick="ShowAddAssessmentModal"><i class="fas fa-plus"></i> إضافة تقييم جديد</button>
            </div>
        }
        else
        {
            <!-- بطاقات التقييمات -->
            <div class="assessments-grid">
                @foreach (var assessment in assessments)
                {
                    <div class="assessment-card">
                        <div class="assessment-header">
                            <h3>@assessment.Title</h3>
                            <span class="assessment-code">@assessment.Code</span>
                        </div>
                        <div class="assessment-body">
                            <div class="assessment-info">
                                <p><i class="fas fa-calendar"></i> التاريخ: @assessment.Date.ToString("dd MMMM yyyy")</p>
                                <p><i class="fas fa-clock"></i> المدة: @GetDurationText(assessment.Duration)</p>
                                <p><i class="fas fa-users"></i> عدد الطلاب: @assessment.TotalStudents</p>
                                @if (assessment.Department != null)
                                {
                                    <p><i class="fas fa-graduation-cap"></i> القسم: @assessment.Department.Name</p>
                                }
                            </div>
                            <div class="assessment-stats">
                                <div class="stat-item">
                                    <div class="number">@assessment.CompletedCount</div>
                                    <div class="label">تم التقييم</div>
                                </div>
                                <div class="stat-item">
                                    <div class="number">@assessment.PendingCount</div>
                                    <div class="label">معلق</div>
                                </div>
                                <div class="stat-item">
                                    <div class="number">@GetCompletionPercentage(assessment)%</div>
                                    <div class="label">الإكمال</div>
                                </div>
                            </div>
                        </div>
                        <div class="assessment-footer">
                            <span class="badge @(GetStatusBadgeClass(assessment.Status))">@GetStatusText(assessment.Status)</span>
                            <button class="btn btn-outline" @onclick="() => ShowAssessmentDetailsModal(assessment)">@(assessment.Status == AssessmentStatus.Completed ? "عرض النتائج" : "إدارة التقييم")</button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- مودال إضافة/تعديل التقييم -->
@if (showAssessmentModal)
{
    <div class="modal-overlay" @onclick="CloseAssessmentModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            @if (isSubmitting)
            {
                <div class="loading-overlay">
                    <div class="spinner"></div>
                    <div class="loading-text">جاري @(isEditMode ? "تحديث" : "إضافة") التقييم...</div>
                </div>
            }
            <div class="modal-header">
                <h3><i class="fas @(isEditMode ? "fa-edit" : "fa-plus")"></i> @(isEditMode ? "تعديل التقييم" : "إضافة تقييم جديد")</h3>
                <button class="modal-close" @onclick="CloseAssessmentModal">&times;</button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="success-message">
                        <i class="fas fa-check-circle"></i> @successMessage
                    </div>
                }
                <form @onsubmit:preventDefault="true">
                    <!-- المعلومات الأساسية -->
                    <h4 class="section-title">المعلومات الأساسية</h4>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="title" class="required-field">عنوان التقييم *</label>
                            <input type="text" id="title" class="form-control" @bind="currentAssessment.Title" required />
                        </div>
                        <div class="form-group">
                            <label for="code" class="required-field">رمز التقييم *</label>
                            <input type="text" id="code" class="form-control" @bind="currentAssessment.Code" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="description">الوصف</label>
                            <textarea id="description" class="form-control" @bind="currentAssessment.Description" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="date" class="required-field">تاريخ التقييم *</label>
                            <input type="date" id="date" class="form-control" @bind="currentAssessment.Date" required />
                        </div>
                        <div class="form-group">
                            <label for="duration" class="required-field">مدة التقييم (بالدقائق) *</label>
                            <input type="number" id="duration" class="form-control" @bind="currentAssessment.Duration" min="1" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="type" class="required-field">نوع التقييم *</label>
                            <select id="type" class="form-control" @bind="currentAssessment.Type" required>
                                <option value="@AssessmentType.Exam">اختبار</option>
                                <option value="@AssessmentType.Project">مشروع</option>
                                <option value="@AssessmentType.Homework">واجب</option>
                                <option value="@AssessmentType.Quiz">اختبار قصير</option>
                                <option value="@AssessmentType.Presentation">عرض تقديمي</option>
                                <option value="@AssessmentType.Lab">مختبر</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="status" class="required-field">الحالة *</label>
                            <select id="status" class="form-control" @bind="currentAssessment.Status" required>
                                <option value="@AssessmentStatus.Pending">معلق</option>
                                <option value="@AssessmentStatus.InProgress">قيد التقييم</option>
                                <option value="@AssessmentStatus.Completed">مكتمل</option>
                                <option value="@AssessmentStatus.Upcoming">قريبًا</option>
                                <option value="@AssessmentStatus.Cancelled">ملغى</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="departmentId">القسم</label>
                            @if (departmentsLoading)
                            {
                                <div class="form-control">جاري تحميل الأقسام...</div>
                            }
                            else
                            {
                                <select id="departmentId" class="form-control" @bind="currentAssessment.DepartmentId">
                                    <option value="">اختر القسم</option>
                                    @foreach (var dept in departments)
                                    {
                                        <option value="@dept.Id">@dept.Name</option>
                                    }
                                </select>
                            }
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseAssessmentModal">
                    <i class="fas fa-times"></i> إلغاء
                </button>
                <button class="btn-primary" @onclick="SaveAssessment" disabled="@isSubmitting">
                    <i class="fas @(isEditMode ? "fa-save" : "fa-plus")"></i> @(isEditMode ? "حفظ التغييرات" : "إضافة التقييم")
                </button>
            </div>
        </div>
    </div>
}

