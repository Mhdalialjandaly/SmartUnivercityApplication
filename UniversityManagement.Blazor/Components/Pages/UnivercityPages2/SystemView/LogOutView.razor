            --primary-color: #f57c00;
            --dark-color: #121820;
            --light-color: #ffffff;
            --gray-color: #f5f5f5;
            --text-color: #333333;
        }

        body {
            font-family: 'Sora', sans-serif;
            color: var(--text-color);
            background-color: #f9f9f9;
            padding-top: 80px;
        }

        .logout-container {
            max-width: 500px;
            margin: 50px auto;
            background: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .logout-icon {
            width: 80px;
            height: 80px;
            background: rgba(245, 124, 0, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

            .logout-icon i {
                font-size: 40px;
                color: var(--primary-color);
            }

        .logout-container h2 {
            margin-bottom: 20px;
            color: var(--dark-color);
        }

        .logout-container p {
            margin-bottom: 30px;
            color: rgba(18, 24, 32, 0.7);
            line-height: 1.6;
        }

        .user-info {
            background: var(--gray-color);
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            text-align: right;
        }

            .user-info p {
                margin: 10px 0;
                display: flex;
                justify-content: space-between;
            }

            .user-info span:first-child {
                font-weight: 500;
                color: var(--dark-color);
            }

        .logout-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 30px;
        }

        .btn {
            padding: 12px 25px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
            text-align: center;
        }

        .btn-primary {
            background: var(--primary-color);
            color: white;
            flex: 1;
        }

            .btn-primary:hover {
                background: #e57100;
            }

        .btn-outline {
            background: transparent;
            border: 1px solid #ddd;
            color: #777;
            flex: 1;
        }

            .btn-outline:hover {
                background: #f5f5f5;
            }

        .session-info {
            background: rgba(76, 175, 80, 0.1);
            border-right: 3px solid #4caf50;
            padding: 15px;
            border-radius: 5px;
            margin: 20px 0;
            text-align: right;
        }

            .session-info p {
                margin: 0;
                color: #4caf50;
                font-weight: 500;
            }

