            .logout-container {
                margin: 20px;
                padding: 30px 20px;
            }

            .logout-buttons {
                flex-direction: column;
            }

            .mil-top-panel {
                height: 70px;
            }

            .mil-navigation {
                display: none;
            }

            .mil-menu-btn {
