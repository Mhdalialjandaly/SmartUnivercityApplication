        }

            .settings-nav a:hover, .settings-nav a.active {
                background: rgba(245, 124, 0, 0.1);
                color: var(--primary-color);
            }

        .settings-nav i {
            margin-left: 10px;
            width: 20px;
            text-align: center;
        }

    .settings-content {
