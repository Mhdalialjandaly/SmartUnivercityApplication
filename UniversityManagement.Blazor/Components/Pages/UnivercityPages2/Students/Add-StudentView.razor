<div class="students-dashboard">
    <!-- الشريط الجانبي -->
    <NavMenu2/>

    <!-- المحتوى الرئيسي -->
    <div class="main-content">
        <div class="top-bar">
            <div class="user-profile">
                <div class="user-info">
                    <h4>د. أحمد محمد</h4>
                    <p>أستاذ مساعد - قسم علوم الحاسب</p>
                </div>
                <img src="https://via.placeholder.com/40" alt="User" style="width: 40px; height: 40px; border-radius: 50%; margin-left: 10px;">
            </div>
        </div>

        <div class="add-student-header">
            <div>
                <h2><i class="fas fa-user-plus"></i> إضافة طالب جديد</h2>
                <p>املأ المعلومات التالية لإضافة طالب جديد إلى النظام</p>
            </div>
            <button class="btn-outline" @onclick="GoBack">
                <i class="fas fa-arrow-right"></i> العودة للطلاب
            </button>
        </div>

        <div class="add-student-form">
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="success-message">
                    <i class="fas fa-check-circle"></i> @successMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-alert">
                    <i class="fas fa-exclamation-circle"></i> @errorMessage
                </div>
            }

            <EditForm Model="newStudent" OnValidSubmit="HandleValidSubmit">
                <!-- المعلومات الأساسية -->
                <h4 class="section-title">المعلومات الأساسية</h4>
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">الاسم الأول *</label>
                        <InputText id="firstName" class="form-control" @bind-Value="newStudent.FirstName" required />
                    </div>
                    <div class="form-group">
                        <label for="lastName">اسم العائلة *</label>
                        <InputText id="lastName" class="form-control" @bind-Value="newStudent.LastName" required />
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="email">البريد الإلكتروني *</label>
                        <InputText type="email" id="email" class="form-control" @bind-Value="newStudent.Email" required />
                    </div>
                    <div class="form-group">
                        <label for="phone">رقم الهاتف *</label>
                        <InputText id="phone" class="form-control" @bind-Value="newStudent.Phone" required />
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="studentId">رقم الطالب *</label>
                        <InputText id="studentId" class="form-control" @bind-Value="newStudent.StudentId" required />
                    </div>
                    <div class="form-group">
                        <label for="departmentId">القسم *</label>
                        <InputSelect id="departmentId" class="form-control" @bind-Value="newStudent.DepartmentId" required>
                            <option value="">اختر القسم</option>
                            <option value="1">علوم الحاسب</option>
                            <option value="2">الرياضيات</option>
                            <option value="3">الفيزياء</option>
                            <option value="4">الكيمياء</option>
                            <option value="5">البيولوجيا</option>
                        </InputSelect>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="birthDate">تاريخ الميلاد *</label>
                        <InputDate id="birthDate" class="form-control" @bind-Value="newStudent.BirthOfDate" required />
                    </div>
                    <div class="form-group">
                        <label for="gender">الجنس *</label>
                        <InputSelect id="gender" class="form-control" @bind-Value="newStudent.Sexual" required>
                            <option value="">اختر الجنس</option>
                            <option value="true">ذكر</option>
                            <option value="false">أنثى</option>
                        </InputSelect>
                    </div>
                </div>
                
                <!-- معلومات السكن -->
                <h4 class="section-title">معلومات السكن</h4>
                <div class="form-row">
                    <div class="form-group">
                        <label for="homeAddress">العنوان *</label>
                        <InputText id="homeAddress" class="form-control" @bind-Value="newStudent.HomeAddress" required />
                    </div>
                    <div class="form-group">
                        <label for="homeNumber">رقم المنزل</label>
                        <InputNumber id="homeNumber" class="form-control" @bind-Value="newStudent.HomeNumber" />
                    </div>
                </div>
                
                <!-- المعلومات الشخصية -->
                <h4 class="section-title">المعلومات الشخصية</h4>
                <div class="form-row">
                    <div class="form-group">
                        <label for="religion">الديانة</label>
                        <InputText id="religion" class="form-control" @bind-Value="newStudent.Religion" />
                    </div>
                    <div class="form-group">
                        <label for="nationality">الجنسية</label>
                        <InputText id="nationality" class="form-control" @bind-Value="newStudent.NationalityName" />
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="politicalNationalism">الانتماء السياسي</label>
                        <InputText id="politicalNationalism" class="form-control" @bind-Value="newStudent.PoliticalNationalism" />
                    </div>
                    <div class="form-group">
                        <label for="civilId">رقم الهوية المدنية *</label>
                        <InputText id="civilId" class="form-control" @bind-Value="newStudent.CivilstatusIDNumberAndNationalCard" required />
                    </div>
                </div>
                
                <!-- معلومات المدرسة -->
                <h4 class="section-title">معلومات المدرسة</h4>
                <div class="form-row">
                    <div class="form-group">
                        <label for="schoolName">اسم المدرسة</label>
                        <InputText id="schoolName" class="form-control" @bind-Value="newStudent.SchoolName" />
                    </div>
                    <div class="form-group">
                        <label for="branch">التخصص</label>
                        <InputText id="branch" class="form-control" @bind-Value="newStudent.Branch" />
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="graduateDate">تاريخ التخرج</label>
                        <InputDate id="graduateDate" class="form-control" @bind-Value="newStudent.DateOfSchoolGraduate" />
                    </div>
                    <div class="form-group">
                        <label for="gpa">المعدل التراكمي</label>
                        <InputNumber step="0.01" id="gpa" class="form-control" @bind-Value="newStudent.GPA" min="0" max="4" />
                    </div>
                </div>
                
                <!-- معلومات إضافية -->
                <h4 class="section-title">معلومات إضافية</h4>
                <div class="form-row">
                    <div class="form-group">
                        <label for="academicYear">السنة الدراسية</label>
                        <InputText id="academicYear" class="form-control" @bind-Value="newStudent.AcademicYear" placeholder="مثلاً: 2023-2024" />
                    </div>
                    <div class="form-group">
                        <label for="status">الحالة *</label>
                        <InputSelect id="status" class="form-control" @bind-Value="newStudent.Status" required>
                            <option value="@StudentStatus.New">جديد</option>
                            <option value="@StudentStatus.Active">نشط</option>
                            <option value="@StudentStatus.Inactive">غير نشط</option>
                            <option value="@StudentStatus.Suspended">موقف دراسي</option>
                            <option value="@StudentStatus.Warrning">تحذير أكاديمي</option>
                        </InputSelect>
                    </div>
                </div>
                
                <div class="form-check">
                    <InputCheckbox id="registrationCompleted" @bind-Value="newStudent.RegistraionCompleted" />
                    <label for="registrationCompleted">اكتمل التسجيل</label>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn-secondary" @onclick="GoBack">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button type="submit" class="btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <><i class="fas fa-spinner fa-spin"></i> جاري الحفظ...</>
                        }
                        else
                        {
                            <><i class="fas fa-save"></i> حفظ الطالب</>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@if (isSubmitting)
{
    <div class="loading-overlay">
        <div class="spinner"></div>
    </div>
}

@code {
    private StudentDto newStudent = new StudentDto
    {
        BirthOfDate = DateTime.Now.AddYears(-18),
        DateOfSchoolGraduate = DateTime.Now,
        RegistrationDate = DateTime.Now,
        CreatedAt = DateTime.Now,
        Status = StudentStatus.New,
        GPA = 0.0,
        AttendancePercentage = 0,
        AccountBalance = 0,
        RegistraionCompleted = false
    };

    private bool isSubmitting = false;
    private string successMessage = "";
    private string errorMessage = "";

    private async Task HandleValidSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = "";
            successMessage = "";
            StateHasChanged();

            // تعيين القيم المحسوبة
            newStudent.FullName = $"{newStudent.FirstName} {newStudent.LastName}";
            newStudent.RegistrationDate = DateTime.Now;
            newStudent.CreatedAt = DateTime.Now;
            newStudent.PasswordHash = "DefaultPassword123"; // كلمة مرور افتراضية

            var result = await StudentService.CreateStudentAsync(newStudent);
            
            if (result != null)
            {
                successMessage = "تم إضافة الطالب بنجاح!";
                
                // إعادة تعيين النموذج بعد الإضافة
                await Task.Delay(2000);
                GoBack();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating student: {ex.Message}");
            errorMessage = "حدث خطأ أثناء إضافة الطالب. يرجى المحاولة مرة أخرى.";
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/studentsview");
    }
