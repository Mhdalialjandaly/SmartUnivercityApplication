@code {
    private List<StudentDto> students = new();
    private string searchTerm = "";
    private bool isLoading = true;

    // متغيرات المودال
    private bool showAddStudentModal = false;
    private bool isSubmitting = false;
    private string successMessage = "";

    // كائن الطالب الجديد
    private StudentDto newStudent = new StudentDto
        {
            BirthOfDate = DateTime.Now.AddYears(-18),
            DateOfSchoolGraduate = DateTime.Now,
            RegistrationDate = DateTime.Now,
            CreatedAt = DateTime.Now,
            Status = StudentStatus.New,
            GPA = 0.0,
            AttendancePercentage = 0,
            AccountBalance = 0,
            RegistraionCompleted = false
        };

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var result = await StudentService.GetAllStudentsAsync();
            students = result ?? new List<StudentDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading students: {ex.Message}");
            students = new List<StudentDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchStudents()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var result = await StudentService.GetStudentsAsync(searchTerm);
                students = result ?? new List<StudentDto>();
            }
            else
            {
                await LoadStudents();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching students: {ex.Message}");
            students = new List<StudentDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshStudents()
    {
        searchTerm = "";
        await LoadStudents();
    }

    private string GetStatusBadgeClass(StudentStatus status)
    {
        return status switch
        {
            StudentStatus.New or StudentStatus.Active => "badge-success",
            StudentStatus.Inactive => "badge-warning",
            StudentStatus.Suspended => "badge-danger",
            _ => "badge-primary"
        };
    }

    private string GetStatusText(StudentStatus status)
    {
        return status switch
        {
            StudentStatus.Active => "نشط",
            StudentStatus.Inactive => "غير نشط",
            StudentStatus.Suspended => "موقف دراسي",
            StudentStatus.New => "جديد",
            StudentStatus.Warrning => "تحذير أكاديمي",
            _ => "غير محدد"
        };
    }

    private void AddNewStudent()
    {
        Navigation.NavigateTo("/apply");
    }

    private void CloseModal()
    {
        showAddStudentModal = false;
        successMessage = "";
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            StateHasChanged();

            // تعيين القيم المحسوبة
            newStudent.FullName = $"{newStudent.FirstName} {newStudent.LastName}";
            newStudent.RegistrationDate = DateTime.Now;
            newStudent.CreatedAt = DateTime.Now;

            var result = await StudentService.CreateStudentAsync(newStudent);

            if (result != null)
            {
                successMessage = "تم إضافة الطالب بنجاح!";
                await LoadStudents(); // إعادة تحميل قائمة الطلاب

                // إغلاق المودال بعد 2 ثانية
                await Task.Delay(2000);
                CloseModal();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating student: {ex.Message}");
            successMessage = "حدث خطأ أثناء إضافة الطالب. يرجى المحاولة مرة أخرى.";
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void ViewStudentDetails(int studentId)
    {
        // التنقل إلى صفحة تفاصيل الطالب
        Navigation.NavigateTo($"/students/{studentId}");
    } 
    
    private void ViewStudentCourses(int studentId)
    {
        // التنقل إلى صفحة تفاصيل الطالب
        Navigation.NavigateTo($"/student/{studentId}/registrations");
    }
