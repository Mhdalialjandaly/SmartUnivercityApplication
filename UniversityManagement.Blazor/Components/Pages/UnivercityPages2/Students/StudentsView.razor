    }

    .badge-primary {
        background: rgba(245, 124, 0, 0.1);
        color: var(--primary-color);
    }

    .badge-danger {
        background: rgba(244, 67, 54, 0.1);
        color: #f44336;
    }

    .btn-outline {
        background: transparent;
