            justify-content: space-between;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .stat-item {
            text-align: center;
        }

            .stat-item .number {
                font-size: 18px;
                font-weight: 600;
                color: var(--primary-color);
            }

            .stat-item .label {
