        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .students-header h2 {
            margin: 0;
        }

    .students-nav {
        display: flex;
        gap: 10px;
    }

        .students-nav button {
            background: white;
            border: 1px solid #ddd;
