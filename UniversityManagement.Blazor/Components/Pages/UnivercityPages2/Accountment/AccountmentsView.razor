    private decimal totalRevenue = 0;
    private decimal totalExpenses = 0;
    private decimal currentBalance = 0;
    private int totalTransactions = 0;

    // المصروفات التفصيلية
    private decimal employeeSalaries = 0;
    private decimal buildingMaintenance = 0;
    private decimal educationalEquipment = 0;
    private decimal utilities = 0;

    // الملخصات
    private StudentPaymentSummaryDto paymentSummary = new();
    private SalarySummaryDto salarySummary = new();

    // البيانات
    private List<StudentPaymentDto> recentPayments = new();
    private List<EmployeeSalaryDto> recentSalaries = new();
    private List<CourseDto> courseRevenues = new();
    private List<FinancialDepartmentDto> departments = new();

    // الفلاتر
    private string selectedYear = DateTime.Now.Year.ToString();
    private int selectedSemester = 1;
    private string reportType = "";
    private DateTime reportStartDate = DateTime.Now.AddMonths(-1);
    private DateTime reportEndDate = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadFinancialData();
    }

    private async Task LoadFinancialData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // تحميل الإحصائيات العامة
            totalRevenue = await FinanceService.GetTotalRevenueAsync();
            totalExpenses = await FinanceService.GetTotalExpensesAsync();
            currentBalance = totalRevenue - totalExpenses;
            totalTransactions = await FinanceService.GetTotalTransactionsAsync();

            // تحميل المصروفات التفصيلية
            var salaries = await FinanceService.GetEmployeeSalariesAsync();
            employeeSalaries = salaries.Sum(e => e.Amount);

            var maintenance = await FinanceService.GetBuildingMaintenanceAsync();
            buildingMaintenance = maintenance.Sum(e => e.Amount);

            var equipment = await FinanceService.GetEducationalEquipmentAsync();
            educationalEquipment = equipment.Sum(e => e.Amount);

            // تحميل البيانات الحديثة
            recentPayments = await FinanceService.GetRecentPaymentsAsync(5);
            recentSalaries = await FinanceService.GetRecentSalariesAsync(5);
            courseRevenues = new List<CourseDto>();
            departments = new List<FinancialDepartmentDto>();

            // تحميل الملخصات
            paymentSummary = new StudentPaymentSummaryDto();
            salarySummary = new SalarySummaryDto();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading financial data: {ex.Message}");
            ToastService.ShowError("حدث خطأ أثناء تحميل البيانات المالية", "خطأ");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private async Task RefreshData()
    {
        await LoadFinancialData();
        ToastService.ShowSuccess("تم تحديث البيانات المالية بنجاح", "نجاح");
    }
    
    // دوال المودال
    private void ShowGenerateReportModal()
    {
        showGenerateReportModal = true;
    }
    
    private void CloseGenerateReportModal()
    {
        showGenerateReportModal = false;
        reportType = "";
    }
    
    private async Task GenerateReport()
    {
        try
        {
            // هنا سيتم توليد التقرير الفعلي
            ToastService.ShowSuccess("جاري توليد التقرير...", "جاري التوليد");
            CloseGenerateReportModal();
            
            // محاكاة عملية التوليد
            await Task.Delay(2000);
            ToastService.ShowSuccess("تم توليد التقرير بنجاح", "نجاح");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating report: {ex.Message}");
            ToastService.ShowError("حدث خطأ أثناء توليد التقرير", "خطأ");
        }
    }
