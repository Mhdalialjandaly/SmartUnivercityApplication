            color: var(--text-color);
            background-color: #f9f9f9;
            padding-top: 80px;
        }
        
        .calendar-dashboard {
            display: flex;
            min-height: calc(100vh - 80px);
        }
        
        .sidebar {
            width: 280px;
            background: var(--dark-color);
            color: white;
            padding: 20px 0;
            transition: all 0.3s ease;
        }
        
        .sidebar-header {
