@code {
    private DateTime currentDate = DateTime.Now;
    private string currentMonthYear => currentDate.ToString("MMMM yyyy");
    private List<CalendarDay> calendarDays = new();
    private List<AcademicCalendarDto> events = new();
    private AcademicCalendarDto selectedEvent;
    private bool showModal = false;

    private bool showExams = true;
    private bool showHolidays = true;
    private bool showClasses = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvents();
        GenerateCalendar();
    }

    private async Task LoadEvents()
    {
        var start = new DateTime(currentDate.Year, currentDate.Month, 1);
        var end = start.AddMonths(1).AddDays(-1);
        events = await AcademicCalendarService.GetEventsByDateRangeAsync(start, end);
    }

    private void GenerateCalendar()
    {
        calendarDays.Clear();

        var firstDayOfMonth = new DateTime(currentDate.Year, currentDate.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);
        var startDay = firstDayOfMonth.AddDays(-(int)firstDayOfMonth.DayOfWeek + 1);
        var endDay = lastDayOfMonth.AddDays(6 - (int)lastDayOfMonth.DayOfWeek);

        for (var day = startDay; day <= endDay; day = day.AddDays(1))
        {
            var dayEvents = events.Where(e => e.StartDate.Date == day.Date).ToList();
            calendarDays.Add(new CalendarDay
                {
                    DayNumber = day.Day,
                    IsOtherMonth = day.Month != currentDate.Month,
                    Events = dayEvents
                });
        }
    }

    private void PreviousMonth()
    {
        currentDate = currentDate.AddMonths(-1);
        StateHasChanged();
        LoadEvents().ContinueWith(_ => GenerateCalendar());
    }

    private void NextMonth()
    {
        currentDate = currentDate.AddMonths(1);
        StateHasChanged();
        LoadEvents().ContinueWith(_ => GenerateCalendar());
    }

    private void GoToToday()
    {
        currentDate = DateTime.Now;
        StateHasChanged();
        LoadEvents().ContinueWith(_ => GenerateCalendar());
    }

    private void ShowEventDetails(AcademicCalendarDto evt)
    {
        selectedEvent = evt;
        showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        StateHasChanged();
    }

    private string GetEventClass(AcademicCalendarDto evt)
    {
        if (evt.IsHoliday && !showHolidays) return "d-none";
        if (evt.EventType.ToString().Contains("Exam") && !showExams) return "d-none";
        if (evt.EventType.ToString().Contains("Class") && !showClasses) return "d-none";

        return evt.IsHoliday ? "holiday" : evt.EventType.ToString().ToLower();
    }

    public class CalendarDay
    {
        public int DayNumber { get; set; }
        public bool IsOtherMonth { get; set; }
        public List<AcademicCalendarDto> Events { get; set; } = new();
    }
}
