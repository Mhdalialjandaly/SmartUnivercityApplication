        /* أنماط إضافية للوحة التقويم */
        :root {
            --primary-color: #f57c00;
            --dark-color: #121820;
            --light-color: #ffffff;
            --gray-color: #f5f5f5;
            --text-color: #333333;
        }
        
        body {
