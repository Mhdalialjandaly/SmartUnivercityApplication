            align-items: center;
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .sidebar-menu a:hover, .sidebar-menu a.active {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-right: 3px solid var(--primary-color);
        }
        
        .sidebar-menu i {
            margin-left: 10px;
            font-size: 18px;
        }
        
        .main-content {
            flex: 1;
            padding: 20px;
            background: var(--gray-color);
