                    <li><a href="/departmentsview"><i class="fas fa-building"></i> <span>الأقسام</span></a></li>
                    <li><a href="/careers"><i class="fas fa-briefcase"></i> <span>التوظيف</span></a></li>
                    <li><a href="/tuitionview"><i class="fas fa-money-bill-wave"></i> <span>الرسوم الدراسية</span></a></li>
                    <li><a href="/eventview"><i class="fas fa-calendar-day"></i> <span>الفعاليات</span></a></li>
                    <li><a href="/archiveview"><i class="fas fa-archive"></i> <span>الأرشيف</span></a></li>
                    <li><a href="/student-projects"><i class="fas fa-laptop-code"></i> <span>المشاريع الطلابية</span></a></li>
                    <li><a href="/acceptance"><i class="fas fa-user-check"></i> <span>طلبات القبول</span></a></li>
                    <li><a href="/official-books"><i class="fas fa-book-open"></i> <span>الكتب الرسمية</span></a></li>
                    <li><a href="/settingsview"><i class="fas fa-cog"></i> <span>الإعدادات</span></a></li>
                    <li><a href="/logoutview"><i class="fas fa-sign-out-alt"></i> <span>تسجيل الخروج</span></a></li>
                </ul>
            </div>
        </div>

        <!-- المحتوى الرئيسي -->
        <div class="main-content">
            <!-- الشريط العلوي -->
            <div class="top-bar">
                <div class="search-box">
                    <input type="text" placeholder="بحث...">
