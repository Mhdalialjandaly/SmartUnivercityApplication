            <!-- الواجبات المعلقة -->
            <div class="card" style="margin-top: 20px;">
                <div class="card-header">
                    <h3>الواجبات المعلقة للتقييم</h3>
                    <button class="btn btn-primary">عرض الكل</button>
                </div>
                <div class="table-responsive">
