            </div>
        </div>

        <!-- رأس الصفحة -->
        <div class="page-header">
            <h1><i class="fas fa-clipboard-list"></i> التقييمات</h1>
            <button class="mil-button" @onclick="ShowAddAssessmentModal"><i class="fas fa-plus"></i> إضافة تقييم جديد</button>
        </div>

        <!-- عرض التحميل -->
        @if (isLoading)
        {
            <div class="loading">
                <i class="fas fa-spinner"></i>
                <p>جاري تحميل بيانات التقييمات...</p>
            </div>
        }
        else if (assessments == null || !assessments.Any())
        {
            <div class="no-assessments">
                <i class="fas fa-clipboard-list"></i>
                <p>لا توجد بيانات تقييمات حالياً.</p>
                <button class="mil-button" @onclick="ShowAddAssessmentModal"><i class="fas fa-plus"></i> إضافة تقييم جديد</button>
            </div>
        }
        else
        {
            <!-- بطاقات التقييمات -->
            <div class="assessments-grid">
                @foreach (var assessment in assessments)
                {
                    <div class="assessment-card">
                        <div class="assessment-header">
                            <h3>@assessment.Title</h3>
                            <span class="assessment-code">@assessment.Code</span>
                        </div>
                        <div class="assessment-body">
                            <div class="assessment-info">
                                <p><i class="fas fa-calendar"></i> التاريخ: @assessment.Date.ToString("dd MMMM yyyy")</p>
                                <p><i class="fas fa-clock"></i> المدة: @GetDurationText(assessment.Duration)</p>
                                <p><i class="fas fa-users"></i> عدد الطلاب: @assessment.TotalStudents</p>
                                @if (assessment.Department != null)
                                {
                                    <p><i class="fas fa-graduation-cap"></i> القسم: @assessment.Department.Name</p>
                                }
                            </div>
                            <div class="assessment-stats">
                                <div class="stat-item">
                                    <div class="number">@assessment.CompletedCount</div>
                                    <div class="label">تم التقييم</div>
                                </div>
                                <div class="stat-item">
                                    <div class="number">@assessment.PendingCount</div>
                                    <div class="label">معلق</div>
                                </div>
                                <div class="stat-item">
                                    <div class="number">@GetCompletionPercentage(assessment)%</div>
                                    <div class="label">الإكمال</div>
                                </div>
                            </div>
                        </div>
                        <div class="assessment-footer">
                            <span class="badge @(GetStatusBadgeClass(assessment.Status))">@GetStatusText(assessment.Status)</span>
                            <button class="btn btn-outline" @onclick="() => ShowAssessmentDetailsModal(assessment)">@(assessment.Status == AssessmentStatus.Completed ? "عرض النتائج" : "إدارة التقييم")</button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<AssessmentDto> assessments = new();
    private string searchTerm = "";
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssessments();
    }

    private async Task LoadAssessments()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            var result = await AssessmentService.GetAllAssessmentsAsync();
            assessments = result ?? new List<AssessmentDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading assessments: {ex.Message}");
            assessments = new List<AssessmentDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchAssessments()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var result = await AssessmentService.SearchAssessmentsAsync(searchTerm);
                assessments = result ?? new List<AssessmentDto>();
            }
            else
            {
                await LoadAssessments();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching assessments: {ex.Message}");
            assessments = new List<AssessmentDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetStatusBadgeClass(AssessmentStatus status)
    {
        return status switch
        {
            AssessmentStatus.Completed => "badge-success",
            AssessmentStatus.InProgress => "badge-warning",
            AssessmentStatus.Pending => "badge-primary",
            AssessmentStatus.Upcoming => "badge-primary",
            _ => "badge-primary"
        };
    }

    private string GetStatusText(AssessmentStatus status)
    {
        return status switch
        {
            AssessmentStatus.Completed => "مكتمل",
            AssessmentStatus.InProgress => "قيد التقييم",
            AssessmentStatus.Pending => "معلق",
            AssessmentStatus.Upcoming => "قريبًا",
            _ => "غير محدد"
        };
    }

    private string GetDurationText(int durationInMinutes)
    {
        if (durationInMinutes < 60)
            return $"{durationInMinutes} دقيقة";
        else if (durationInMinutes < 1440) // أقل من يوم
            return $"{durationInMinutes / 60} ساعة";
        else
            return $"{durationInMinutes / 1440} يوم";
    }

    private int GetCompletionPercentage(AssessmentDto assessment)
    {
        if (assessment.TotalStudents == 0) return 0;
        return (int)((assessment.CompletedCount * 100) / assessment.TotalStudents);
    }

