                            <td>4.0/5</td>
                        </tr>
                        <tr>
                            <td>الهندسة</td>
                            <td>3,200</td>
                            <td>110</td>
                            <td>85%</td>
                            <td>4.1/5</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- المشاريع والمبادرات -->
        <div class="card" style="margin-top: 20px;">
            <div class="card-header">
                <h3>المشاريع والمبادرات الحالية</h3>
                <button class="btn btn-primary">إضافة مشروع</button>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>المشروع</th>
                            <th>الكلية المسؤولة</th>
                            <th>الحالة</th>
                            <th>التقدم</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>تطوير منصة التعلم الإلكتروني</td>
                            <td>تقنية المعلومات</td>
                            <td><span class="badge badge-warning">قيد التنفيذ</span></td>
                            <td>65%</td>
                            <td><button class="btn btn-outline">تفاصيل</button></td>
                        </tr>
                        <tr>
                            <td>برنامج التدريب الصيفي للطلاب</td>
                            <td>التعاون مع القطاع الخاص</td>
                            <td><span class="badge badge-success">مكتمل</span></td>
                            <td>100%</td>
                            <td><button class="btn btn-outline">عرض النتائج</button></td>
                        </tr>
