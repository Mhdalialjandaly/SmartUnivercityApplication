@page "/"

<!-- بطاقات الإحصائيات -->
<div class="stats-cards">
    <div class="stat-card">
        <i class="fas fa-users"></i>
        <h3>1,254</h3>
        <p>إجمالي المستخدمين</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-book"></i>
        <h3>86</h3>
        <p>الدورات المتاحة</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-chart-line"></i>
        <h3>92%</h3>
        <p>معدل الإنجاز</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-tasks"></i>
        <h3>42</h3>
        <p>المهام المكتملة</p>
    </div>
</div>

<!-- قسم أقسام النظام -->
<div class="dashboard-section">
    <h2><i class="fas fa-th-large"></i> أقسام النظام</h2>
    <div class="system-sections-container">
        <div class="system-sections">
            <div class="system-card">
                <i class="fas fa-user-graduate"></i>
                <span>الطلاب</span>
                <div class="tooltip">إدارة الطلاب</div>
            </div>
            <div class="system-card">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>المعلمين</span>
                <div class="tooltip">إدارة المعلمين</div>
            </div>
            <div class="system-card">
                <i class="fas fa-book-open"></i>
                <span>المواد</span>
                <div class="tooltip">إدارة المواد الدراسية</div>
            </div>
            <div class="system-card">
                <i class="fas fa-calendar-alt"></i>
                <span>الجدول</span>
                <div class="tooltip">جدول الحصص</div>
            </div>
            <div class="system-card">
                <i class="fas fa-file-invoice"></i>
                <span>التقارير</span>
                <div class="tooltip">تقارير النظام</div>
            </div>
            <div class="system-card">
                <i class="fas fa-cogs"></i>
                <span>الإعدادات</span>
                <div class="tooltip">إعدادات النظام</div>
            </div>
            <div class="system-card">
                <i class="fas fa-envelope"></i>
                <span>الرسائل</span>
                <div class="tooltip">نظام الرسائل</div>
            </div>
            <div class="system-card">
                <i class="fas fa-bell"></i>
                <span>الإشعارات</span>
                <div class="tooltip">إدارة الإشعارات</div>
            </div>
        </div>
    </div>
</div>