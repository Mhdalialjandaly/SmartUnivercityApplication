@page "/"
@attribute [Authorize]
<!-- بطاقات الإحصائيات -->
<div class="stats-cards">
    <div class="stat-card">
        <i class="fas fa-users"></i>
        <h3>1,254</h3>
        <p>إجمالي المستخدمين</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-book"></i>
        <h3>86</h3>
        <p>الدورات المتاحة</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-chart-line"></i>
        <h3>92%</h3>
        <p>معدل الإنجاز</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-tasks"></i>
        <h3>42</h3>
        <p>المهام المكتملة</p>
    </div>
</div>

<!-- قسم أقسام النظام -->
<div class="dashboard-section">
    <h2><i class="fas fa-th-large"></i> أقسام النظام</h2>
    <div class="system-sections-container">
        <div class="system-sections-container">
            <div class="system-sections">
                <a href="/studentsview" class="system-card">
                    <i class="fas fa-users"></i>
                    <span>الطلاب</span>
                    <div class="tooltip">إدارة الطلاب</div>
                </a>

                <a href="/teachers" class="system-card">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>أعضاء الهيئة</span>
                    <div class="tooltip">إدارة المعلمين</div>
                </a>

                <a href="/coursesview" class="system-card">
                    <i class="fas fa-book"></i>
                    <span>المقررات</span>
                    <div class="tooltip">إدارة المقررات الدراسية</div>
                </a>

                <a href="/departmentsview" class="system-card">
                    <i class="fas fa-building"></i>
                    <span>الأقسام</span>
                    <div class="tooltip">إدارة الأقسام</div>
                </a>

                <a href="/assessments" class="system-card">
                    <i class="fas fa-clipboard-list"></i>
                    <span>التقييمات</span>
                    <div class="tooltip">إدارة التقييمات</div>
                </a>

                <a href="/reportsview" class="system-card">
                    <i class="fas fa-chart-bar"></i>
                    <span>التقارير</span>
                    <div class="tooltip">تقارير النظام</div>
                </a>

                <a href="/calendarview" class="system-card">
                    <i class="fas fa-calendar-alt"></i>
                    <span>الجدول الدراسي</span>
                    <div class="tooltip">عرض الجدول الدراسي</div>
                </a>

                <a href="/acceptance" class="system-card">
                    <i class="fas fa-user-check"></i>
                    <span>طلبات القبول</span>
                    <div class="tooltip">إدارة طلبات القبول</div>
                </a>

                <a href="/student-projects" class="system-card">
                    <i class="fas fa-laptop-code"></i>
                    <span>مشاريع الطلاب</span>
                    <div class="tooltip">إدارة مشاريع الطلاب</div>
                </a>

                <a href="/tuitionview" class="system-card">
                    <i class="fas fa-money-bill-wave"></i>
                    <span>الرسوم الدراسية</span>
                    <div class="tooltip">إدارة الرسوم الدراسية</div>
                </a>

                <a href="/eventview" class="system-card">
                    <i class="fas fa-calendar-day"></i>
                    <span>الفعاليات</span>
                    <div class="tooltip">إدارة الفعاليات</div>
                </a>

                <a href="/archiveview" class="system-card">
                    <i class="fas fa-archive"></i>
                    <span>الأرشيف</span>
                    <div class="tooltip">إدارة الأرشيف</div>
                </a>

                <a href="/official-books" class="system-card">
                    <i class="fas fa-book-open"></i>
                    <span>الكتب الرسمية</span>
                    <div class="tooltip">إدارة الكتب الرسمية</div>
                </a>

                <a href="/accounting-dashboard" class="system-card">
                    <i class="fas fa-book"></i>
                    <span>الحسابات المالية</span>
                    <div class="tooltip">لوحة الحسابات المالية</div>
                </a>

                <a href="/settingsview" class="system-card">
                    <i class="fas fa-cog"></i>
                    <span>الإعدادات</span>
                    <div class="tooltip">إعدادات النظام</div>
                </a>
            </div>
        </div>

    </div>

</div>